<template>
  <div class="module-view">
    <div class="module-view-header">
      <div class="module-view-icon">
        <font-awesome-icon icon="bolt" />
      </div>
      <div class="module-view-info">
        <h1>Adeudos de Energ?a General</h1>
        <p>M?dulo de Mercados - Reporte general de adeudos de energ?a el?ctrica</p>
      </div>
    </div>

    <div class="module-view-content">
      <div class="municipal-card">
        <div class="municipal-card-header">
          <h5><font-awesome-icon icon="filter" /> Filtros</h5>
        </div>
        <div class="municipal-card-body">
          <div class="form-row">
            <div class="form-group">
              <label class="municipal-form-label">Recaudadora</label>
              <select v-model.number="filters.recaudadora" class="municipal-form-control" @change="loadMercados">
                <option value="">Todas</option>
                <option v-for="rec in recaudadoras" :key="rec.id_rec" :value="rec.id_rec">
                  {{ rec.id_rec }} - {{ rec.recaudadora }}
                </option>
              </select>
            </div>
            <div class="form-group">
              <label class="municipal-form-label">Mercado</label>
              <select v-model.number="filters.mercado" class="municipal-form-control">
                <option value="">Todos</option>
                <option v-for="m in mercados" :key="m.num_mercado_nvo" :value="m.num_mercado_nvo">
                  {{ m.num_mercado_nvo }} - {{ m.descripcion }}
                </option>
              </select>
            </div>
            <div class="form-group">
              <label class="municipal-form-label">A?o</label>
              <input type="number" v-model.number="filters.ano" class="municipal-form-control" min="1990" max="2099" />
            </div>
            <div class="form-group">
              <label class="municipal-form-label">Periodo</label>
              <input type="number" v-model.number="filters.periodo" class="municipal-form-control" min="1" max="12" />
            </div>
          </div>
          <div class="button-group">
            <button class="btn-municipal-primary" @click="buscar" :disabled="loading">
              <font-awesome-icon :icon="loading ? 'spinner' : 'search'" :spin="loading" /> Buscar
            </button>
          </div>
        </div>
      </div>

      <div v-if="adeudos.length > 0" class="municipal-card">
        <div class="municipal-card-header">
          <h5><font-awesome-icon icon="list" /> Adeudos de Energ?a <span class="badge-danger">{{ adeudos.length }}</span></h5>
        </div>
        <div class="municipal-card-body table-container">
          <div class="municipal-table">
            <table class="municipal-table">
              <thead class="municipal-table-header">
                <tr>
                  <th>Mercado</th>
                  <th>Local</th>
                  <th>Titular</th>
                  <th>A?o</th>
                  <th>Periodo</th>
                  <th class="text-end">Importe</th>
                  <th class="text-end">Recargos</th>
                  <th class="text-end">Total</th>
                </tr>
              </thead>
              <tbody>
                <tr v-for="(adeudo, idx) in adeudos" :key="idx" class="row-hover">
                  <td>{{ adeudo.mercado }}</td>
                  <td>{{ adeudo.local }}</td>
                  <td>{{ adeudo.titular }}</td>
                  <td>{{ adeudo.axo }}</td>
                  <td>{{ adeudo.periodo }}</td>
                  <td class="text-end">{{ formatCurrency(adeudo.importe) }}</td>
                  <td class="text-end">{{ formatCurrency(adeudo.recargos) }}</td>
                  <td class="text-end"><strong class="text-danger">{{ formatCurrency(adeudo.total) }}</strong></td>
                </tr>
              </tbody>
              <tfoot>
                <tr class="municipal-table-header">
                  <th colspan="5" class="text-end">TOTALES:</th>
                  <th class="text-end">{{ formatCurrency(totalImporte) }}</th>
                  <th class="text-end">{{ formatCurrency(totalRecargos) }}</th>
                  <th class="text-end">{{ formatCurrency(totalGeneral) }}</th>
                </tr>
              </tfoot>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</template>

<script setup>
import { FontAwesomeIcon } from '@fortawesome/vue-fontawesome'
import { ref, computed, onMounted } from 'vue'
import { useApi } from '@/composables/useApi'
import { useLicenciasErrorHandler } from '@/composables/useLicenciasErrorHandler'
import { useToast } from 'vue-toastification'

const { executeStoredProcedure } = useApi()
const { handleError } = useLicenciasErrorHandler()
const toast = useToast()

const loading = ref(false)
const recaudadoras = ref([])
const mercados = ref([])
const adeudos = ref([])
const filters = ref({
  recaudadora: '',
  mercado: '',
  ano: new Date().getFullYear(),
  periodo: new Date().getMonth() + 1
})

const totalImporte = computed(() => adeudos.value.reduce((sum, a) => sum + (a.importe || 0), 0))
const totalRecargos = computed(() => adeudos.value.reduce((sum, a) => sum + (a.recargos || 0), 0))
const totalGeneral = computed(() => totalImporte.value + totalRecargos.value)

const loadRecaudadoras = async () => {
  const result = await executeStoredProcedure('get_recaudadoras', {})
  if (result.success) recaudadoras.value = result.data || []
}

const loadMercados = async () => {
  if (!filters.value.recaudadora) return
  const result = await executeStoredProcedure('get_mercados_by_recaudadora', {
    rec_id: filters.value.recaudadora
  })
  if (result.success) mercados.value = result.data || []
}

const buscar = async () => {
  loading.value = true
  try {
    const result = await executeStoredProcedure('get_adeudos_energia_grl', {
      rec_id: filters.value.recaudadora || null,
      mercado_id: filters.value.mercado || null,
      ano: filters.value.ano,
      periodo: filters.value.periodo
    })
    if (result.success) {
      adeudos.value = result.data || []
      toast.success(`${adeudos.value.length} adeudos encontrados`)
    } else {
      handleError(result)
    }
  } catch (error) {
    handleError(error)
  } finally {
    loading.value = false
  }
}

const formatCurrency = (value) => {
  return new Intl.NumberFormat('es-MX', { style: 'currency', currency: 'MXN' }).format(value || 0)
}

onMounted(() => loadRecaudadoras())
</script>

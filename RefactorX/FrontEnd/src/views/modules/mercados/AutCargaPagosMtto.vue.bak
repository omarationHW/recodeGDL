<template>
    <div class="module-view">
    <div class="module-view-header">
      <div class="module-view-icon">
        <font-awesome-icon icon="dollar-sign" />
      </div>
      <div class="module-view-info">
        <h1>Autorizar Fecha de Ingreso</h1>
        <p>Módulo de Mercados</p>
      </div>
        </div>

    <div class="module-view-content">

    <div class="form-row">
      <div class="form-group">
        <div class="municipal-card">
          <div class="municipal-card-header bg-primary text-white">
            <i class="fas fa-calendar-check"></i> {{ editing ? 'Modificar' : 'Registrar' }} Fecha de Ingreso
          </div>
          <div class="municipal-card-body">
            <form @submit.prevent="onSubmit">
              <div class="mb-3">
                <label class="municipal-form-label">Fecha Ingreso *</label>
                <input type="date" v-model="form.fecha_ingreso" class="municipal-form-control" required :disabled="editing" />
              </div>
              <div class="mb-3">
                <label class="municipal-form-label">Permiso *</label>
                <select v-model="form.autorizar" class="municipal-form-control" required>
                  <option value="S">AUTORIZAR FECHA</option>
                  <option value="N">BLOQUEAR FECHA</option>
                </select>
              </div>
              <div class="mb-3">
                <label class="municipal-form-label">Fecha Límite *</label>
                <input type="date" v-model="form.fecha_limite" class="municipal-form-control" required />
              </div>
              <div class="mb-3">
                <label class="municipal-form-label">Usuario Permiso *</label>
                <select v-model.number="form.id_usupermiso" class="municipal-form-control" required>
                  <option value="" disabled>Seleccione un usuario...</option>
                  <option v-for="user in usuarios" :key="user.id_usuario" :value="user.id_usuario">
                    {{ user.nombre }}
                  </option>
                </select>
              </div>
              <div class="mb-3">
                <label class="municipal-form-label">Comentario</label>
                <textarea v-model="form.comentarios" @input="toUpperCase" rows="4" class="municipal-form-control" placeholder="Ingrese comentarios en mayúsculas"></textarea>
              </div>
              <div class="d-flex gap-2">
                <button type="submit" class="btn-municipal-success flex-fill" :disabled="loadingForm">
                  <i class="fas fa-check"></i> {{ editing ? 'Actualizar' : 'Aceptar' }}
                </button>
                <button type="button" class="btn-municipal-secondary flex-fill" @click="onCancel">
                  <i class="fas fa-times"></i> Cancelar
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>

      <div class="form-group">
        <div class="municipal-card">
          <div class="municipal-card-header bg-info text-white">
            <i class="fas fa-list"></i> Fechas Autorizadas
          </div>
          <div class="municipal-card-body">
            <div v-if="loading" class="text-center p-3">
              <div class="spinner-border text-info"></div>
              <p>Cargando...</p>
            </div>
            <div v-else-if="fechas.length === 0" class="alert alert-info">
              No hay fechas autorizadas registradas
            </div>
            <div v-else class="municipal-table">
              <table class="municipal-table">
                <thead class="municipal-table-header">
                  <tr>
                    <th>Fecha Ingreso</th>
                    <th>Permiso</th>
                    <th>F. Límite</th>
                    <th>Usuario</th>
                    <th>Acción</th>
                  </tr>
                </thead>
                <tbody>
                  <tr v-for="item in fechas" :key="`${item.fecha_ingreso}`">
                    <td>{{ formatDate(item.fecha_ingreso) }}</td>
                    <td>
                      <span :class="item.autorizar === 'S' ? 'badge bg-success' : 'badge bg-danger'">
                        {{ item.autorizar === 'S' ? 'AUTORIZAR' : 'BLOQUEAR' }}
                      </span>
                    </td>
                    <td>{{ formatDate(item.fecha_limite) }}</td>
                    <td><small>{{ item.nombre }}</small></td>
                    <td>
                      <button class="btn-action btn-warning" @click="onEdit(item)" title="Editar">
                        <i class="fas fa-edit"></i>
                      </button>
                    </td>
                  </tr>
                </tbody>
              </table>
            </div>
            <div v-if="fechas.length > 0" class="mt-2">
              <small class="text-muted">
                <i class="fas fa-info-circle"></i> Click en Editar para modificar una fecha
              </small>
            </div>
        </div>
        </div>

        <!-- Detalles del comentario -->
        <div v-if="selectedFecha" class="municipal-card">
          <div class="municipal-card-header bg-secondary text-white">
            <i class="fas fa-comment"></i> Comentario
          </div>
          <div class="municipal-card-body">
            <p class="mb-0">{{ selectedFecha.comentarios || 'Sin comentarios' }}</p>
          </div>
        </div>
      </div>
        </div>

    <!-- Alertas -->
    <div v-if="error" class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
      <i class="fas fa-exclamation-triangle"></i> {{ error }}
      <button type="button" class="btn-close" @click="error = ''"></button>
    </div>
    <div v-if="success" class="alert alert-success alert-dismissible fade show mt-3" role="alert">
      <i class="fas fa-check-circle"></i> {{ success }}
      <button type="button" class="btn-close" @click="success = ''"></button>
    </div>
        </div>
  </div>
</template>

<script setup>
import { FontAwesomeIcon } from '@fortawesome/vue-fontawesome'
import { ref, onMounted } from 'vue'
import { useApi } from '@/composables/useApi'
import { useLicenciasErrorHandler } from '@/composables/useLicenciasErrorHandler'
import { useToast } from 'vue-toastification'

const { executeStoredProcedure } = useApi()
const { handleError } = useLicenciasErrorHandler()
const toast = useToast()

const form = ref({
  fecha_ingreso: '',
  autorizar: 'S',
  fecha_limite: '',
  id_usupermiso: '',
  comentarios: ''
})

const usuarios = ref([])
const fechas = ref([])
const selectedFecha = ref(null)
const editing = ref(false)
const oficina = ref(1) // Por defecto
const loading = ref(false)
const loadingForm = ref(false)
const error = ref('')
const success = ref('')

const cargarUsuarios = async () => {
  try {
    const result = await executeStoredProcedure('SP_MERCADOS_GET_USUARIOS_PERMISO', [])
    usuarios.value = result || []
  } catch (err) {
    handleError(err)
    toast.error('Error al cargar usuarios')
  }
}

const cargarFechas = async () => {
  loading.value = true
  try {
    const result = await executeStoredProcedure('SP_MERCADOS_GET_FECHAS_AUTORIZADAS', [oficina.value])
    fechas.value = result || []
  } catch (err) {
    handleError(err)
    toast.error('Error al cargar fechas')
  } finally {
    loading.value = false
  }
}

const onSubmit = async () => {
  error.value = ''
  success.value = ''

  if (!form.value.fecha_ingreso || !form.value.fecha_limite || !form.value.id_usupermiso) {
    error.value = 'Todos los campos marcados con * son obligatorios'
    return
  }

  loadingForm.value = true
  try {
    const spName = editing.value
      ? 'SP_MERCADOS_UPDATE_FECHA_AUTORIZADA'
      : 'SP_MERCADOS_INSERT_FECHA_AUTORIZADA'

    const result = await executeStoredProcedure(spName, [
      form.value.fecha_ingreso,
      oficina.value,
      form.value.autorizar,
      form.value.fecha_limite,
      form.value.id_usupermiso,
      form.value.comentarios
    ])

    if (result && result[0] && result[0].resultado === 1) {
      success.value = editing.value ? 'Fecha actualizada correctamente' : 'Fecha registrada correctamente'
      toast.success(success.value)
      onCancel()
      await cargarFechas()
    } else if (result && result[0] && result[0].resultado === -2) {
      error.value = 'La fecha ya existe en el sistema'
      toast.warning(error.value)
    } else {
      error.value = 'Error al guardar la fecha'
      toast.error(error.value)
    }
  } catch (err) {
    handleError(err)
    error.value = 'Error al procesar la solicitud'
    toast.error(error.value)
  } finally {
    loadingForm.value = false
  }
}

const onEdit = (item) => {
  form.value = {
    fecha_ingreso: item.fecha_ingreso,
    autorizar: item.autorizar,
    fecha_limite: item.fecha_limite,
    id_usupermiso: item.id_usupermiso,
    comentarios: item.comentarios
  }
  selectedFecha.value = item
  editing.value = true
  success.value = ''
  error.value = ''
}

const onCancel = () => {
  form.value = {
    fecha_ingreso: '',
    autorizar: 'S',
    fecha_limite: '',
    id_usupermiso: '',
    comentarios: ''
  }
  selectedFecha.value = null
  editing.value = false
  error.value = ''
  success.value = ''
}

const toUpperCase = () => {
  form.value.comentarios = form.value.comentarios.toUpperCase()
}

const formatDate = (dateStr) => {
  if (!dateStr) return ''
  const d = new Date(dateStr)
  return d.toLocaleDateString('es-MX')
}

onMounted(() => {
  cargarUsuarios()
  cargarFechas()
})
</script>



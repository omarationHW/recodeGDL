<template>
  <div class="module-view">
    <div class="module-view-header">
      <div class="module-view-icon">
        <font-awesome-icon icon="file-alt" />
      </div>
      <div class="module-view-info">
        <h1>Carga de Pagos desde Texto</h1>
        <p>M?dulo de Mercados - Importaci?n de pagos desde archivo de texto</p>
      </div>
        </div>

    <div class="module-view-content">
      <div class="municipal-card">
        <div class="municipal-card-header">
          <h5><font-awesome-icon icon="upload" /> Importar Archivo</h5>
        </div>
        <div class="municipal-card-body">
          <div class="form-row">
            <div class="form-group">
              <label class="municipal-form-label">Archivo de Texto *</label>
              <input type="file" accept=".txt,.csv" class="municipal-form-control" @change="handleFileUpload" />
            </div>
        </div>
          <div class="button-group">
            <button class="btn-municipal-primary" @click="procesarArchivo" :disabled="loading || !archivo">
              <font-awesome-icon :icon="loading ? 'spinner' : 'cogs'" :spin="loading" /> Procesar
            </button>
          </div>
        </div>
      </div>

      <div v-if="registros.length > 0" class="municipal-card">
        <div class="municipal-card-header">
          <h5><font-awesome-icon icon="list" /> Registros Cargados <span class="badge-info">{{ registros.length }}</span></h5>
        </div>
        <div class="municipal-card-body table-container">
          <div class="municipal-table">
            <table class="municipal-table">
              <thead class="municipal-table-header">
                <tr>
                  <th>#</th>
                  <th>Fecha</th>
                  <th>Oficina</th>
                  <th>Mercado</th>
                  <th>Local</th>
                  <th class="text-end">Importe</th>
                  <th>Estado</th>
                </tr>
              </thead>
              <tbody>
                <tr v-for="(reg, idx) in registros" :key="idx" class="row-hover">
                  <td>{{ idx + 1 }}</td>
                  <td>{{ reg.fecha }}</td>
                  <td>{{ reg.oficina }}</td>
                  <td>{{ reg.mercado }}</td>
                  <td>{{ reg.local }}</td>
                  <td class="text-end">{{ formatCurrency(reg.importe) }}</td>
                  <td>
                    <span :class="reg.estado === 'OK' ? 'badge-success' : 'badge-danger'">
                      {{ reg.estado }}
                    </span>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
        </div>
  </div>
</template>

<script setup>
import { FontAwesomeIcon } from '@fortawesome/vue-fontawesome'
import { ref } from 'vue'
import { useApi } from '@/composables/useApi'
import { useLicenciasErrorHandler } from '@/composables/useLicenciasErrorHandler'
import { useToast } from 'vue-toastification'

const { executeStoredProcedure } = useApi()
const { handleError } = useLicenciasErrorHandler()
const toast = useToast()

const loading = ref(false)
const archivo = ref(null)
const registros = ref([])

const handleFileUpload = (event) => {
  archivo.value = event.target.files[0]
}

const procesarArchivo = async () => {
  if (!archivo.value) {
    toast.warning('Seleccione un archivo')
    return
  }

  loading.value = true
  try {
    const reader = new FileReader()
    reader.onload = async (e) => {
      const texto = e.target.result
      const lineas = texto.split('\n').filter(l => l.trim())

      registros.value = lineas.map((linea, idx) => {
        const partes = linea.split('|')
        return {
          fecha: partes[0] || '',
          oficina: partes[1] || '',
          mercado: partes[2] || '',
          local: partes[3] || '',
          importe: parseFloat(partes[4]) || 0,
          estado: 'Pendiente'
        }
      })

      toast.success(`${registros.value.length} registros cargados`)
    }
    reader.readAsText(archivo.value)
  } catch (error) {
    handleError(error)
  } finally {
    loading.value = false
  }
}

const formatCurrency = (value) => {
  return new Intl.NumberFormat('es-MX', { style: 'currency', currency: 'MXN' }).format(value || 0)
}
</script>

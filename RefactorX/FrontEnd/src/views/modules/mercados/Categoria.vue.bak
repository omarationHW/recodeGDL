  } finally {
    cargando.value = false
  }
}

// Nueva categor�a
function nuevaCategoria() {
  modoEdicion.value = false
  formulario.value = {
    id_categoria: null,
    cve_categoria: '',
    descripcion: '',
    vigencia: 'V'
  }
  mostrarFormulario.value = true
}

// Editar categor�a
function editarCategoria(categoria) {
  modoEdicion.value = true
  formulario.value = {
    id_categoria: categoria.id_categoria,
    cve_categoria: categoria.cve_categoria,
    descripcion: categoria.descripcion,
    vigencia: categoria.vigencia
  }
  mostrarFormulario.value = true
}

// Guardar categor�a
async function guardarCategoria() {
  try {
    guardando.value = true

    if (modoEdicion.value) {
      await execute('SP_MERCADOS_CATEGORIAS_UPDATE', 'mercados', {
        p_id_categoria: formulario.value.id_categoria,
        p_descripcion: formulario.value.descripcion,
        p_vigencia: formulario.value.vigencia
      })

      await execute('SP_MERCADOS_CATEGORIAS_CREATE', 'mercados', {
        p_cve_categoria: formulario.value.cve_categoria,
        p_descripcion: formulario.value.descripcion,
        p_vigencia: formulario.value.vigencia
      })
      showToast('Categor�a creada correctamente', 'success')
    }

    cerrarFormulario()
    await cargarDatos()

  } catch (error) {
    handleError(error)
  } finally {
    guardando.value = false
  }
}

// Eliminar categor�a
async function eliminarCategoria(categoria) {
  const result = await Swal.fire({
    title: '�Eliminar categor�a?',
    html: `�Est� seguro de eliminar la categor�a:<br>
           <strong>${categoria.cve_categoria} - ${categoria.descripcion}</strong>?<br><br>

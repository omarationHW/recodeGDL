<template>
  <div class="module-view">
    <div class="module-view-header">
      <div class="module-view-icon">
        <font-awesome-icon icon="tags" />
      </div>
      <div class="module-view-info">
        <h1>Mantenimiento de Categor?as</h1>
        <p>M?dulo de Mercados - Administraci?n de categor?as de locales</p>
      </div>
        </div>

    <div class="module-view-content">
      <div class="municipal-card">
        <div class="municipal-card-header">
          <h5><font-awesome-icon icon="plus" /> Nueva Categor?a</h5>
        </div>
        <div class="municipal-card-body">
          <form @submit.prevent="guardarCategoria">
            <div class="form-row">
              <div class="form-group">
                <label class="municipal-form-label">Clave *</label>
                <input type="number" v-model.number="form.clave" class="municipal-form-control" required />
              </div>
              <div class="form-group">
                <label class="municipal-form-label">Descripci?n *</label>
                <input type="text" v-model="form.descripcion" class="municipal-form-control" required maxlength="100" />
              </div>
              <div class="form-group">
                <label class="municipal-form-label">Vigencia *</label>
                <select v-model="form.vigencia" class="municipal-form-control" required>
                  <option value="V">Vigente</option>
                  <option value="B">Baja</option>
                </select>
              </div>
        </div>
            <div class="button-group">
              <button type="submit" class="btn-municipal-success" :disabled="loading">
                <font-awesome-icon icon="save" /> Guardar
              </button>
              <button type="button" class="btn-municipal-secondary" @click="limpiar">
                <font-awesome-icon icon="eraser" /> Limpiar
              </button>
            </div>
          </form>
        </div>
        </div>

      <div v-if="categorias.length > 0" class="municipal-card">
        <div class="municipal-card-header">
          <h5><font-awesome-icon icon="list" /> Categor?as Registradas <span class="badge-info">{{ categorias.length }}</span></h5>
        </div>
        <div class="municipal-card-body table-container">
          <div class="municipal-table">
            <table class="municipal-table">
              <thead class="municipal-table-header">
                <tr>
                  <th>Clave</th>
                  <th>Descripci?n</th>
                  <th>Vigencia</th>
                  <th>Acciones</th>
                </tr>
              </thead>
              <tbody>
                <tr v-for="cat in categorias" :key="cat.clave" class="row-hover">
                  <td><strong>{{ cat.clave }}</strong></td>
                  <td>{{ cat.descripcion }}</td>
                  <td>
                    <span :class="cat.vigencia === 'V' ? 'badge-success' : 'badge-danger'">
                      {{ cat.vigencia === 'V' ? 'Vigente' : 'Baja' }}
                    </span>
                  </td>
                  <td>
                    <button class="btn-action btn-edit" @click="editar(cat)" title="Editar">
                      <font-awesome-icon icon="edit" />
                    </button>
                    <button class="btn-action btn-delete" @click="eliminar(cat)" title="Eliminar">
                      <font-awesome-icon icon="trash" />
                    </button>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
        </div>
  </div>
</template>

<script setup>
import { FontAwesomeIcon } from '@fortawesome/vue-fontawesome'
import { ref, onMounted } from 'vue'
import { useApi } from '@/composables/useApi'
import { useLicenciasErrorHandler } from '@/composables/useLicenciasErrorHandler'
import { useToast } from 'vue-toastification'

const { executeStoredProcedure } = useApi()
const { handleError } = useLicenciasErrorHandler()
const toast = useToast()

const loading = ref(false)
const categorias = ref([])
const form = ref({
  clave: '',
  descripcion: '',
  vigencia: 'V'
})

const cargarCategorias = async () => {
  try {
    const result = await executeStoredProcedure('sp_get_categorias', {})
    if (result.success) {
      categorias.value = result.data || []
    }
  } catch (error) {
    handleError(error)
  }
}

const guardarCategoria = async () => {
  loading.value = true
  try {
    const result = await executeStoredProcedure('sp_save_categoria', {
      p_clave: form.value.clave,
      p_descripcion: form.value.descripcion,
      p_vigencia: form.value.vigencia
    })

    if (result.success) {
      toast.success('Categor?a guardada correctamente')
      limpiar()
      await cargarCategorias()
    }
  } catch (error) {
    handleError(error)
  } finally {
    loading.value = false
  }
}

const editar = (cat) => {
  form.value = { ...cat }
}

const eliminar = async (cat) => {
  if (!confirm(`?Eliminar categor?a ${cat.clave}?`)) return

  try {
    const result = await executeStoredProcedure('sp_delete_categoria', { p_clave: cat.clave })
    if (result.success) {
      toast.success('Categor?a eliminada')
      await cargarCategorias()
    }
  } catch (error) {
    handleError(error)
  }
}

const limpiar = () => {
  form.value = {
    clave: '',
    descripcion: '',
    vigencia: 'V'
  }
}

onMounted(() => cargarCategorias())
</script>

<template>
    <div class="module-view">
    <div class="module-view-header">
      <div class="module-view-icon">
        <font-awesome-icon icon="hand-holding-usd" />
      </div>
      <div class="module-view-info">
        <h1>Condonación de Adeudos</h1>
        <p>Módulo de Mercados</p>
      </div>
        </div>

    <div class="module-view-content">

    <div class="municipal-card">
      <div class="municipal-card-header"><i class="fas fa-search"></i> Búsqueda de Local</div>
      <div class="municipal-card-body">
        <form @submit.prevent="buscarLocal" class="row g-3">
          <div class="form-group">
            <label class="municipal-form-label">Oficina *</label>
            <input v-model.number="form.oficina" type="number" class="municipal-form-control" required />
          </div>
          <div class="form-group">
            <label class="municipal-form-label">Mercado *</label>
            <input v-model.number="form.num_mercado" type="number" class="municipal-form-control" required />
          </div>
          <div class="form-group">
            <label class="municipal-form-label">Categoría *</label>
            <input v-model.number="form.categoria" type="number" class="municipal-form-control" required />
          </div>
          <div class="form-group">
            <label class="municipal-form-label">Sección *</label>
            <input v-model="form.seccion" class="municipal-form-control" maxlength="2" required />
          </div>
          <div class="form-group">
            <label class="municipal-form-label">Local *</label>
            <input v-model="form.local" class="municipal-form-control" maxlength="7" required />
          </div>
          <div class="form-group">
            <label class="municipal-form-label">Letra</label>
            <input v-model="form.letra_local" class="municipal-form-control" maxlength="1" />
          </div>
          <div class="form-group">
            <button type="submit" class="btn-municipal-primary w-100"><i class="fas fa-search"></i> Buscar</button>
          </div>
        </form>
        <div v-if="localInfo" class="mt-3 p-3 bg-light border rounded">
          <h6 class="mb-2">Información del Local</h6>
          <p class="mb-1"><strong>Nombre:</strong> {{ localInfo.nombre }}</p>
          <p class="mb-1"><strong>Descripción:</strong> {{ localInfo.descripcion_local }}</p>
          <p class="mb-0"><strong>Superficie:</strong> {{ localInfo.superficie }} m²</p>
        </div>
        </div>
    </div>

    <div v-if="localInfo" class="row">
      <div class="form-group">
        <div class="municipal-card">
          <div class="municipal-card-header bg-warning"><i class="fas fa-hand-holding-usd"></i> Adeudos a Condonar</div>
          <div class="municipal-card-body">
            <div v-if="adeudos.length === 0" class="text-center text-muted p-3">
              No hay adeudos para condonar
            </div>
            <div v-else>
              <div class="form-group mb-3">
                <label class="municipal-form-label">Oficio de Condonación *</label>
                <input v-model="oficio" class="municipal-form-control" maxlength="13" placeholder="Ej: OFI-2024-001" />
              </div>
              <div class="municipal-table">
                <table class="municipal-table">
                  <thead class="municipal-table-header">
                    <tr>
                      <th><input type="checkbox" v-model="selectAll" @change="toggleSelectAll" /></th>
                      <th>Año</th>
                      <th>Periodo</th>
                      <th>Importe</th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr v-for="(a, idx) in adeudos" :key="`${a.expression_1}-${a.expression_2}`">
                      <td><input type="checkbox" v-model="selectedAdeudos" :value="idx" /></td>
                      <td>{{ a.expression_1 }}</td>
                      <td>{{ a.expression_2 }}</td>
                      <td class="text-end">{{ formatCurrency(a.expression_3) }}</td>
                    </tr>
                  </tbody>
                </table>
              </div>
              <button class="btn-municipal-success w-100" @click="condonarSeleccionados" :disabled="selectedAdeudos.length === 0 || !oficio">
                <i class="fas fa-check"></i> Condonar Seleccionados
              </button>
            </div>
        </div>
        </div>
        </div>

      <div class="form-group">
        <div class="municipal-card">
          <div class="municipal-card-header bg-info text-white"><i class="fas fa-history"></i> Historial de Condonados</div>
          <div class="municipal-card-body">
            <div v-if="condonados.length === 0" class="text-center text-muted p-3">
              No hay condonaciones registradas
            </div>
            <div v-else class="municipal-table">
              <table class="municipal-table">
                <thead class="municipal-table-header">
                  <tr>
                    <th>Año</th>
                    <th>Periodo</th>
                    <th>Importe</th>
                    <th>Observación</th>
                    <th>Acción</th>
                  </tr>
                </thead>
                <tbody>
                  <tr v-for="c in condonados" :key="c.id_cancelacion">
                    <td>{{ c.axo }}</td>
                    <td>{{ c.periodo }}</td>
                    <td class="text-end">{{ formatCurrency(c.importe) }}</td>
                    <td><small>{{ c.observacion }}</small></td>
                    <td>
                      <button class="btn-action btn-delete" @click="deshacerCondonacion(c)">
                        <i class="fas fa-undo"></i>
                      </button>
                    </td>
                  </tr>
                </tbody>
              </table>
            </div>
        </div>
        </div>
        </div>
    </div>
        </div>
  </div>
</template>

<script setup>
import { FontAwesomeIcon } from '@fortawesome/vue-fontawesome'
import { ref, watch } from 'vue'
import { useApi } from '@/composables/useApi'
import { useLicenciasErrorHandler } from '@/composables/useLicenciasErrorHandler'
import { useToast } from 'vue-toastification'
import Swal from 'sweetalert2'

const { executeStoredProcedure } = useApi()
const { handleError } = useLicenciasErrorHandler()
const toast = useToast()

const form = ref({
  oficina: '',
  num_mercado: '',
  categoria: '',
  seccion: '',
  local: '',
  letra_local: ''
})

const localInfo = ref(null)
const adeudos = ref([])
const condonados = ref([])
const selectedAdeudos = ref([])
const selectAll = ref(false)
const oficio = ref('')

const buscarLocal = async () => {
  localInfo.value = null
  adeudos.value = []
  condonados.value = []
  selectedAdeudos.value = []
  selectAll.value = false
  oficio.value = ''

  try {
    const result = await executeStoredProcedure('SP_MERCADOS_GET_LOCAL_BY_KEY', [
      form.value.oficina,
      form.value.num_mercado,
      form.value.categoria,
      form.value.seccion,
      form.value.local,
      form.value.letra_local || null,
      null
    ])

    if (result && result.length > 0) {
      localInfo.value = result[0]
      await cargarAdeudos()
      await cargarCondonados()
    } else {
      toast.warning('No se encontró el local especificado')
    }
  } catch (error) {
    handleError(error)
    toast.error('Error al buscar local')
  }
}

const cargarAdeudos = async () => {
  try {
    const result = await executeStoredProcedure('SP_MERCADOS_LISTAR_ADEUDOS_CONDONAR', [localInfo.value.id_local])
    adeudos.value = result || []
  } catch (error) {
    handleError(error)
    toast.error('Error al cargar adeudos')
  }
}

const cargarCondonados = async () => {
  try {
    const result = await executeStoredProcedure('SP_MERCADOS_LISTAR_CONDONADOS', [localInfo.value.id_local])
    condonados.value = result || []
  } catch (error) {
    handleError(error)
    toast.error('Error al cargar condonados')
  }
}

const toggleSelectAll = () => {
  if (selectAll.value) {
    selectedAdeudos.value = adeudos.value.map((_, idx) => idx)
  } else {
    selectedAdeudos.value = []
  }
}

watch(selectedAdeudos, (newVal) => {
  selectAll.value = newVal.length === adeudos.value.length && adeudos.value.length > 0
})

const condonarSeleccionados = async () => {
  if (!oficio.value.trim()) {
    toast.warning('Debe ingresar el oficio de condonación')
    return
  }

  const result = await Swal.fire({
    title: '¿Confirmar Condonación?',
    text: `Se condonarán ${selectedAdeudos.value.length} periodo(s) con oficio: ${oficio.value}`,
    icon: 'warning',
    showCancelButton: true,
    confirmButtonText: 'Sí, condonar',
    cancelButtonText: 'Cancelar'
  })

  if (result.isConfirmed) {
    try {
      for (const idx of selectedAdeudos.value) {
        const adeudo = adeudos.value[idx]
        await executeStoredProcedure('SP_MERCADOS_CONDONAR_ADEUDOS', [
          localInfo.value.id_local,
          oficio.value,
          adeudo.expression_1,
          adeudo.expression_2,
          adeudo.expression_3,
          1 // id_usuario temporal
        ])
      }
      toast.success('Condonación aplicada correctamente')
      selectedAdeudos.value = []
      selectAll.value = false
      oficio.value = ''
      await cargarAdeudos()
      await cargarCondonados()
    } catch (error) {
      handleError(error)
      toast.error('Error al condonar adeudos')
    }
  }
}

const deshacerCondonacion = async (condonacion) => {
  const result = await Swal.fire({
    title: '¿Deshacer Condonación?',
    text: `Se restaurará el adeudo de ${condonacion.axo}/${condonacion.periodo}`,
    icon: 'question',
    showCancelButton: true,
    confirmButtonText: 'Sí, deshacer',
    cancelButtonText: 'Cancelar'
  })

  if (result.isConfirmed) {
    try {
      await executeStoredProcedure('SP_MERCADOS_DESHACER_CONDONACION', [
        condonacion.id_cancelacion,
        condonacion.id_local,
        condonacion.axo,
        condonacion.periodo,
        condonacion.importe
      ])
      toast.success('Condonación deshecha correctamente')
      await cargarAdeudos()
      await cargarCondonados()
    } catch (error) {
      handleError(error)
      toast.error('Error al deshacer condonación')
    }
  }
}

const formatCurrency = (value) => {
  if (value == null) return ''
  return new Intl.NumberFormat('es-MX', { style: 'currency', currency: 'MXN' }).format(value)
}
</script>



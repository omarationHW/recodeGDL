<template>
    <div class="module-view">
    <div class="module-view-header">
      <div class="module-view-icon">
        <font-awesome-icon icon="bolt" />
      </div>
      <div class="module-view-info">
        <h1>Cuotas de Energía</h1>
        <p>Módulo de Mercados</p>
      </div>
        </div>

    <div class="module-view-content">

    <div class="municipal-card">
      <div class="municipal-card-header d-flex justify-content-between align-items-center">
        <span>
          <i class="fas fa-bolt"></i> Cuotas de Energía Eléctrica
          <span class="badge badge-info ml-2">{{ cuotas.length }} registros</span>
        </span>
        <button class="btn-municipal-success btn-sm" @click="openCreateModal">
          <i class="fas fa-plus"></i> Agregar Cuota
        </button>
      </div>
      <div class="municipal-card-body">
        <div v-if="loading" class="text-center p-4">
          <div class="spinner-border text-primary"></div>
          <p class="mt-2">Cargando cuotas...</p>
        </div>
        <div v-else class="municipal-table">
          <table class="municipal-table">
            <thead class="municipal-table-header">
              <tr>
                <th>Control</th>
                <th>Año</th>
                <th>Periodo</th>
                <th>Importe</th>
                <th>Fecha de Alta</th>
                <th>Usuario</th>
                <th>Acciones</th>
              </tr>
            </thead>
            <tbody>
              <tr v-for="cuota in cuotas" :key="cuota.id_kilowhatts">
                <td>{{ cuota.id_kilowhatts }}</td>
                <td>{{ cuota.axo }}</td>
                <td>{{ cuota.periodo }}</td>
                <td class="text-end">{{ formatCurrency(cuota.importe) }}</td>
                <td>{{ formatDateTime(cuota.fecha_alta) }}</td>
                <td>{{ cuota.usuario }}</td>
                <td>
                  <button
                    class="btn btn-sm btn-info mr-1"
                    @click="openEditModal(cuota)"
                  >
                    <i class="fas fa-edit"></i>
                  </button>
                  <button
                    class="btn-action btn-delete"
                    @click="deleteCuota(cuota)"
                  >
                    <i class="fas fa-trash"></i>
                  </button>
                </td>
              </tr>
              <tr v-if="cuotas.length === 0">
                <td colspan="7" class="text-center text-muted">
                  No hay cuotas registradas
                </td>
              </tr>
            </tbody>
          </table>
        </div>
        </div>
    </div>

    <!-- Modal para crear/editar cuota -->
    <div v-if="showModal" class="modal-overlay" @click.self="showModal = false">
      <div class="modal-content">
        <div class="modal-header">
          <h5>
            <i :class="editMode ? 'fas fa-edit' : 'fas fa-plus-circle'"></i>
            {{ editMode ? 'Modificar Cuota' : 'Agregar Nueva Cuota' }}
          </h5>
          <button class="close-btn" @click="showModal = false">&times;</button>
        </div>
        <div class="modal-body">
          <div class="form-row">
            <div class="form-group">
              <label class="municipal-form-label">Año *</label>
              <input
                type="number"
                v-model.number="form.axo"
                class="municipal-form-control"
                required
                min="2000"
                max="2100"
              />
            </div>
            <div class="form-group">
              <label class="municipal-form-label">Periodo *</label>
              <input
                type="number"
                v-model.number="form.periodo"
                class="municipal-form-control"
                required
                min="1"
                max="12"
              />
            </div>
            <div class="form-group">
              <label class="municipal-form-label">Importe *</label>
              <input
                type="number"
                v-model.number="form.importe"
                class="municipal-form-control"
                step="0.000001"
                min="0.000001"
                required
              />
            </div>
        </div>
        </div>
        <div class="modal-footer">
          <button class="btn-municipal-secondary" @click="showModal = false">
            Cancelar
          </button>
          <button
            class="btn-municipal-success"
            @click="editMode ? updateCuota() : createCuota()"
            :disabled="saving"
          >
            <i class="fas fa-save"></i> Guardar
          </button>
        </div>
        </div>
    </div>
        </div>
  </div>
</template>

<script setup>
import { FontAwesomeIcon } from '@fortawesome/vue-fontawesome'
import { ref, onMounted } from 'vue'
import { useApi } from '@/composables/useApi'
import { useLicenciasErrorHandler } from '@/composables/useLicenciasErrorHandler'
import { useToast } from 'vue-toastification'
import Swal from 'sweetalert2'

const { executeStoredProcedure } = useApi()
const { handleError } = useLicenciasErrorHandler()
const toast = useToast()

const cuotas = ref([])
const loading = ref(false)
const showModal = ref(false)
const editMode = ref(false)
const saving = ref(false)

const form = ref({
  id_kilowhatts: null,
  axo: new Date().getFullYear(),
  periodo: 1,
  importe: null
})

const fetchCuotas = async () => {
  loading.value = true
  try {
    const result = await executeStoredProcedure('SP_MERCADOS_CUOTAS_ENERGIA_LIST', [])
    cuotas.value = result || []
  } catch (error) {
    handleError(error)
    toast.error('Error al cargar las cuotas')
  } finally {
    loading.value = false
  }
}

const openCreateModal = () => {
  editMode.value = false
  form.value = {
    id_kilowhatts: null,
    axo: new Date().getFullYear(),
    periodo: 1,
    importe: null
  }
  showModal.value = true
}

const openEditModal = (cuota) => {
  editMode.value = true
  form.value = {
    id_kilowhatts: cuota.id_kilowhatts,
    axo: cuota.axo,
    periodo: cuota.periodo,
    importe: cuota.importe
  }
  showModal.value = true
}

const createCuota = async () => {
  saving.value = true
  try {
    await executeStoredProcedure('SP_MERCADOS_CUOTAS_ENERGIA_CREATE', [
      form.value.axo,
      form.value.periodo,
      form.value.importe,
      1 // id_usuario
    ])

    toast.success('Cuota agregada correctamente')
    showModal.value = false
    await fetchCuotas()
  } catch (error) {
    handleError(error)
    toast.error('Error al agregar la cuota')
  } finally {
    saving.value = false
  }
}

const updateCuota = async () => {
  saving.value = true
  try {
    await executeStoredProcedure('SP_MERCADOS_CUOTAS_ENERGIA_UPDATE', [
      form.value.id_kilowhatts,
      form.value.axo,
      form.value.periodo,
      form.value.importe
    ])

    toast.success('Cuota modificada correctamente')
    showModal.value = false
    await fetchCuotas()
  } catch (error) {
    handleError(error)
    toast.error('Error al modificar la cuota')
  } finally {
    saving.value = false
  }
}

const deleteCuota = async (cuota) => {
  const result = await Swal.fire({
    title: '¿Eliminar cuota?',
    text: `¿Está seguro de eliminar la cuota del periodo ${cuota.axo}/${cuota.periodo}?`,
    icon: 'warning',
    showCancelButton: true,
    confirmButtonText: 'Sí, eliminar',
    cancelButtonText: 'Cancelar',
    confirmButtonColor: '#d33'
  })

  if (result.isConfirmed) {
    try {
      await executeStoredProcedure('SP_MERCADOS_CUOTAS_ENERGIA_DELETE', [
        cuota.id_kilowhatts
      ])
      toast.success('Cuota eliminada correctamente')
      await fetchCuotas()
    } catch (error) {
      handleError(error)
      toast.error('Error al eliminar la cuota')
    }
  }
}

const formatCurrency = (value) => {
  if (value == null) return ''
  return new Intl.NumberFormat('es-MX', {
    style: 'currency',
    currency: 'MXN',
    minimumFractionDigits: 6
  }).format(value)
}

const formatDateTime = (value) => {
  if (!value) return ''
  return new Date(value).toLocaleString('es-MX')
}

onMounted(() => {
  fetchCuotas()
})
</script>



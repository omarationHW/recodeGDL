<template>
    <div class="module-view">
    <div class="module-view-header">
      <div class="module-view-icon">
        <font-awesome-icon icon="bolt" />
      </div>
      <div class="module-view-info">
        <h1>Mantenimiento de Cuotas de Energía</h1>
        <p>Módulo de Mercados</p>
      </div>
        </div>

    <div class="module-view-content">

    <div class="municipal-card">
      <div class="municipal-card-header">
        <i class="fas fa-edit"></i> {{ isEdit ? 'Modificar Cuota' : 'Agregar Cuota' }}
      </div>
      <div class="municipal-card-body">
        <form @submit.prevent="onSubmit">
          <div class="row g-3">
            <div class="form-group">
              <label class="municipal-form-label">Control</label>
              <input
                type="text"
                v-model="form.id_kilowhatts"
                class="municipal-form-control"
                readonly
                disabled
              />
            </div>
            <div class="form-group">
              <label class="municipal-form-label">Año *</label>
              <input
                type="number"
                v-model.number="form.axo"
                class="municipal-form-control"
                min="2002"
                required
                :readonly="isEdit"
              />
            </div>
            <div class="form-group">
              <label class="municipal-form-label">Periodo *</label>
              <input
                type="number"
                v-model.number="form.periodo"
                class="municipal-form-control"
                min="1"
                max="12"
                required
                :readonly="isEdit"
              />
            </div>
            <div class="form-group">
              <label class="municipal-form-label">Cuota *</label>
              <input
                type="number"
                v-model.number="form.importe"
                class="municipal-form-control"
                min="0.000001"
                step="0.000001"
                required
              />
            </div>
        </div>
          <div class="mt-3">
            <button type="submit" class="btn-municipal-success" :disabled="saving">
              <i class="fas fa-save"></i> {{ isEdit ? 'Actualizar' : 'Guardar' }}
            </button>
            <button type="button" class="btn-municipal-secondary ms-2" @click="onCancel">
              <i class="fas fa-times"></i> Cancelar
            </button>
          </div>
        </form>
      </div>
        </div>

    <div class="municipal-card">
      <div class="municipal-card-header d-flex justify-content-between align-items-center">
        <span>
          <i class="fas fa-list"></i> Listado de Cuotas
          <span class="badge badge-info ml-2">{{ cuotas.length }} registros</span>
        </span>
      </div>
      <div class="municipal-card-body">
        <div class="row g-3 mb-3">
          <div class="form-group">
            <label class="municipal-form-label">Año</label>
            <input
              type="number"
              v-model.number="filter.axo"
              class="municipal-form-control"
              min="2002"
              placeholder="Todos"
            />
          </div>
          <div class="form-group">
            <label class="municipal-form-label">Periodo</label>
            <input
              type="number"
              v-model.number="filter.periodo"
              class="municipal-form-control"
              min="1"
              max="12"
              placeholder="Todos"
            />
          </div>
          <div class="form-group">
            <button class="btn-municipal-primary" @click="fetchCuotas">
              <i class="fas fa-search"></i> Buscar
            </button>
          </div>
        </div>

        <div v-if="loading" class="text-center p-4">
          <div class="spinner-border text-primary"></div>
          <p class="mt-2">Cargando cuotas...</p>
        </div>

        <div v-else class="municipal-table">
          <table class="municipal-table">
            <thead class="municipal-table-header">
              <tr>
                <th>Control</th>
                <th>Año</th>
                <th>Periodo</th>
                <th>Cuota</th>
                <th>Fecha Alta</th>
                <th>Usuario</th>
                <th>Acciones</th>
              </tr>
            </thead>
            <tbody>
              <tr v-for="cuota in cuotas" :key="cuota.id_kilowhatts">
                <td>{{ cuota.id_kilowhatts }}</td>
                <td>{{ cuota.axo }}</td>
                <td>{{ cuota.periodo }}</td>
                <td class="text-end">{{ formatCurrency(cuota.importe) }}</td>
                <td>{{ formatDateTime(cuota.fecha_alta) }}</td>
                <td>{{ cuota.usuario }}</td>
                <td>
                  <button
                    class="btn-action btn-info"
                    @click="editCuota(cuota)"
                  >
                    <i class="fas fa-edit"></i>
                  </button>
                </td>
              </tr>
              <tr v-if="cuotas.length === 0">
                <td colspan="7" class="text-center text-muted">
                  No hay cuotas registradas
                </td>
              </tr>
            </tbody>
          </table>
        </div>
        </div>
    </div>
        </div>
  </div>
</template>

<script setup>
import { FontAwesomeIcon } from '@fortawesome/vue-fontawesome'
import { ref, onMounted } from 'vue'
import { useApi } from '@/composables/useApi'
import { useLicenciasErrorHandler } from '@/composables/useLicenciasErrorHandler'
import { useToast } from 'vue-toastification'

const { executeStoredProcedure } = useApi()
const { handleError } = useLicenciasErrorHandler()
const toast = useToast()

const cuotas = ref([])
const loading = ref(false)
const saving = ref(false)
const isEdit = ref(false)

const form = ref({
  id_kilowhatts: '',
  axo: new Date().getFullYear(),
  periodo: 1,
  importe: null,
  id_usuario: 1
})

const filter = ref({
  axo: null,
  periodo: null
})

const fetchCuotas = async () => {
  loading.value = true
  try {
    const result = await executeStoredProcedure('SP_MERCADOS_CUOTAS_LIST_FILTER', [
      filter.value.axo,
      filter.value.periodo
    ])
    cuotas.value = result || []
  } catch (error) {
    handleError(error)
    toast.error('Error al cargar cuotas')
  } finally {
    loading.value = false
  }
}

const onSubmit = async () => {
  if (!form.value.importe || form.value.importe <= 0) {
    toast.warning('La cuota debe ser mayor a cero')
    return
  }

  saving.value = true
  try {
    if (isEdit.value) {
      await executeStoredProcedure('SP_MERCADOS_CUOTA_UPDATE', [
        form.value.id_kilowhatts,
        form.value.importe,
        form.value.id_usuario
      ])
      toast.success('Cuota actualizada correctamente')
    } else {
      await executeStoredProcedure('SP_MERCADOS_CUOTA_INSERT', [
        form.value.axo,
        form.value.periodo,
        form.value.importe,
        form.value.id_usuario
      ])
      toast.success('Cuota agregada correctamente')
    }

    onCancel()
    await fetchCuotas()
  } catch (error) {
    handleError(error)
    toast.error('Error al guardar la cuota')
  } finally {
    saving.value = false
  }
}

const editCuota = (cuota) => {
  form.value = {
    id_kilowhatts: cuota.id_kilowhatts,
    axo: cuota.axo,
    periodo: cuota.periodo,
    importe: cuota.importe,
    id_usuario: 1
  }
  isEdit.value = true
  window.scrollTo({ top: 0, behavior: 'smooth' })
}

const onCancel = () => {
  form.value = {
    id_kilowhatts: '',
    axo: new Date().getFullYear(),
    periodo: 1,
    importe: null,
    id_usuario: 1
  }
  isEdit.value = false
}

const formatCurrency = (value) => {
  if (value == null) return ''
  return new Intl.NumberFormat('es-MX', {
    style: 'currency',
    currency: 'MXN',
    minimumFractionDigits: 6
  }).format(value)
}

const formatDateTime = (value) => {
  if (!value) return ''
  return new Date(value).toLocaleString('es-MX')
}

onMounted(() => {
  fetchCuotas()
})
</script>



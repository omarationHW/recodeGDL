<template>
  <div class="module-view">
    <div class="module-view-header">
      <div class="module-view-icon">
        <font-awesome-icon icon="dollar-sign" />
      </div>
      <div class="module-view-info">
        <h1>Mantenimiento de Cuotas de Mercado</h1>
        <p>Catálogo de cuotas y tarifas para locales de mercados</p>
      </div>
      <div class="module-view-actions">
        <button
          class="btn-municipal-primary"
          @click="openCreateModal"
          :disabled="loading"
        >
          <font-awesome-icon icon="plus" />
          Agregar Cuota
        </button>
      </div>
    </div>

    <div class="module-view-content">
      <!-- Tabla de cuotas -->
      <div class="municipal-card">
        <div class="municipal-card-header">
          <h5>
            <font-awesome-icon icon="list" />
            Catálogo de Cuotas
            <span class="badge-info" v-if="cuotas.length > 0">{{ cuotas.length }} registros</span>
          </h5>
          <div v-if="loading" class="spinner-border spinner-border-sm" role="status">
            <span class="visually-hidden">Cargando...</span>
          </div>
        </div>
        <div class="municipal-card-body table-container">
          <div class="municipal-table">
            <table class="municipal-table">
              <thead class="municipal-table-header">
                <tr>
                  <th>Clave</th>
                  <th>Descripción</th>
                  <th>Categoría</th>
                  <th class="text-end">Importe</th>
                  <th>Periodicidad</th>
                  <th>Activa</th>
                  <th>Acciones</th>
                </tr>
              </thead>
              <tbody>
                <tr v-for="cuota in cuotas" :key="cuota.clave_cuota" class="row-hover">
                  <td>
                    <span class="badge-primary">{{ cuota.clave_cuota }}</span>
                  </td>
                  <td><strong>{{ cuota.descripcion }}</strong></td>
                  <td>{{ cuota.categoria }}</td>
                  <td class="text-end fw-bold">{{ formatCurrency(cuota.importe) }}</td>
                  <td>{{ cuota.periodicidad }}</td>
                  <td>
                    <span :class="`badge-${cuota.activa ? 'success' : 'secondary'}`">
                      {{ cuota.activa ? 'Sí' : 'No' }}
                    </span>
                  </td>
                  <td>
                    <div class="action-buttons">
                      <button
                        class="btn-action btn-edit"
                        @click="openEditModal(cuota)"
                        title="Editar"
                      >
                        <font-awesome-icon icon="edit" />
                      </button>
                      <button
                        class="btn-action btn-delete"
                        @click="confirmDelete(cuota)"
                        title="Eliminar"
                      >
                        <font-awesome-icon icon="trash" />
                      </button>
                    </div>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
          <div v-if="!loading && cuotas.length === 0" class="text-center py-5">
            <font-awesome-icon icon="inbox" size="3x" class="text-muted mb-3" />
            <p class="text-muted">No hay cuotas registradas</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Modal para crear/editar -->
    <div v-if="showModal" class="modal-overlay" @click.self="closeModal">
      <div class="modal-container">
        <div class="modal-header">
          <h5>{{ isEditMode ? 'Editar Cuota' : 'Agregar Cuota' }}</h5>
          <button class="btn-close" @click="closeModal">
            <font-awesome-icon icon="times" />
          </button>
        </div>
        <div class="modal-body">
          <form @submit.prevent="saveCuota">
            <div class="row g-3">
              <div class="col-md-6">
                <label class="municipal-form-label">Clave de Cuota *</label>
                <input
                  type="number"
                  class="municipal-form-control"
                  v-model.number="form.clave_cuota"
                  :readonly="isEditMode"
                  min="1"
                  required
                  placeholder="Clave"
                />
              </div>
              <div class="col-md-6">
                <label class="municipal-form-label">Categoría *</label>
                <input
                  type="number"
                  class="municipal-form-control"
                  v-model.number="form.categoria"
                  min="1"
                  max="12"
                  required
                  placeholder="1-12"
                />
              </div>
              <div class="col-12">
                <label class="municipal-form-label">Descripción *</label>
                <input
                  type="text"
                  class="municipal-form-control text-uppercase"
                  v-model="form.descripcion"
                  maxlength="100"
                  required
                  placeholder="Descripción de la cuota"
                />
              </div>
              <div class="col-md-6">
                <label class="municipal-form-label">Importe *</label>
                <input
                  type="number"
                  class="municipal-form-control"
                  v-model.number="form.importe"
                  min="0"
                  step="0.01"
                  required
                  placeholder="0.00"
                />
              </div>
              <div class="col-md-6">
                <label class="municipal-form-label">Periodicidad *</label>
                <select class="municipal-form-control" v-model="form.periodicidad" required>
                  <option value="">Seleccione...</option>
                  <option value="MENSUAL">MENSUAL</option>
                  <option value="BIMESTRAL">BIMESTRAL</option>
                  <option value="TRIMESTRAL">TRIMESTRAL</option>
                  <option value="SEMESTRAL">SEMESTRAL</option>
                  <option value="ANUAL">ANUAL</option>
                </select>
              </div>
              <div class="col-12">
                <div class="form-check">
                  <input
                    class="form-check-input"
                    type="checkbox"
                    id="checkActiva"
                    v-model="form.activa"
                  />
                  <label class="form-check-label" for="checkActiva">
                    Cuota activa
                  </label>
                </div>
              </div>
            </div>
            <div class="modal-footer">
              <button type="submit" class="btn-municipal-primary" :disabled="saving">
                <font-awesome-icon :icon="saving ? 'spinner' : 'save'" :spin="saving" />
                {{ saving ? 'Guardando...' : 'Guardar' }}
              </button>
              <button type="button" class="btn-municipal-secondary" @click="closeModal" :disabled="saving">
                <font-awesome-icon icon="times" />
                Cancelar
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</template>

<script setup>
import { FontAwesomeIcon } from '@fortawesome/vue-fontawesome'
import { ref, onMounted } from 'vue'
import { useApi } from '@/composables/useApi'
import { useLicenciasErrorHandler } from '@/composables/useLicenciasErrorHandler'
import { useToast } from 'vue-toastification'
import Swal from 'sweetalert2'

const { executeStoredProcedure } = useApi()
const { handleError } = useLicenciasErrorHandler()
const toast = useToast()

// State
const loading = ref(false)
const saving = ref(false)
const showModal = ref(false)
const isEditMode = ref(false)
const cuotas = ref([])

const form = ref({
  clave_cuota: '',
  categoria: '',
  descripcion: '',
  importe: 0,
  periodicidad: '',
  activa: true
})

// Methods
const loadCuotas = async () => {
  try {
    loading.value = true
    const result = await executeStoredProcedure('SP_MERCADOS_GET_CUOTAS', {})
    if (result.success) {
      cuotas.value = result.data || []
    } else {
      handleError(result)
    }
  } catch (error) {
    handleError(error)
  } finally {
    loading.value = false
  }
}

const openCreateModal = () => {
  isEditMode.value = false
  const nextClave = cuotas.value.length > 0
    ? Math.max(...cuotas.value.map(c => c.clave_cuota)) + 1
    : 1
  form.value = {
    clave_cuota: nextClave,
    categoria: '',
    descripcion: '',
    importe: 0,
    periodicidad: '',
    activa: true
  }
  showModal.value = true
}

const openEditModal = (cuota) => {
  isEditMode.value = true
  form.value = {
    clave_cuota: cuota.clave_cuota,
    categoria: cuota.categoria,
    descripcion: cuota.descripcion,
    importe: cuota.importe,
    periodicidad: cuota.periodicidad,
    activa: cuota.activa
  }
  showModal.value = true
}

const closeModal = () => {
  showModal.value = false
  form.value = {
    clave_cuota: '',
    categoria: '',
    descripcion: '',
    importe: 0,
    periodicidad: '',
    activa: true
  }
}

const saveCuota = async () => {
  if (!form.value.descripcion || form.value.descripcion.trim() === '') {
    toast.warning('La descripción no puede estar vacía')
    return
  }

  try {
    saving.value = true
    const sp = isEditMode.value ? 'SP_MERCADOS_UPDATE_CUOTA' : 'SP_MERCADOS_CREATE_CUOTA'
    const params = {
      p_clave_cuota: form.value.clave_cuota,
      p_categoria: form.value.categoria,
      p_descripcion: form.value.descripcion.trim().toUpperCase(),
      p_importe: form.value.importe,
      p_periodicidad: form.value.periodicidad,
      p_activa: form.value.activa
    }

    const result = await executeStoredProcedure(sp, params)
    if (result.success) {
      toast.success(isEditMode.value ? 'Cuota actualizada correctamente' : 'Cuota creada correctamente')
      closeModal()
      loadCuotas()
    } else {
      handleError(result)
    }
  } catch (error) {
    handleError(error)
  } finally {
    saving.value = false
  }
}

const confirmDelete = async (cuota) => {
  const result = await Swal.fire({
    title: '¿Está seguro?',
    text: `¿Desea eliminar la cuota ${cuota.clave_cuota}?`,
    icon: 'warning',
    showCancelButton: true,
    confirmButtonText: 'Sí, eliminar',
    cancelButtonText: 'Cancelar',
    confirmButtonColor: '#d33',
    cancelButtonColor: '#6c757d'
  })

  if (result.isConfirmed) {
    await deleteCuota(cuota.clave_cuota)
  }
}

const deleteCuota = async (clave_cuota) => {
  try {
    loading.value = true
    const result = await executeStoredProcedure('SP_MERCADOS_DELETE_CUOTA', {
      p_clave_cuota: clave_cuota
    })
    if (result.success) {
      toast.success('Cuota eliminada correctamente')
      loadCuotas()
    } else {
      handleError(result)
    }
  } catch (error) {
    handleError(error)
  } finally {
    loading.value = false
  }
}

const formatCurrency = (value) => {
  return new Intl.NumberFormat('es-MX', {
    style: 'currency',
    currency: 'MXN'
  }).format(value || 0)
}

// Lifecycle
onMounted(() => {
  loadCuotas()
})
</script>

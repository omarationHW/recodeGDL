<template>
  <div class="module-view">
    <!-- Header del m�dulo -->
    <div class="module-view-header">
      <div class="module-view-icon">
        <font-awesome-icon icon="key" />
      </div>
      <div class="module-view-info">
        <h1>Claves de Cuota</h1>
        <p>Cat�logo de Claves de Cuota para Mercados</p>
      </div>
      <div class="module-view-actions">
        <button
          class="btn-municipal-primary"
          @click="openCreateModal"
          :disabled="loading"
        >
          <font-awesome-icon icon="plus" />
          Agregar Clave
        </button>
      </div>
        </div>

    <div class="module-view-content">
      <!-- Tabla de claves de cuota -->
      <div class="municipal-card">
        <div class="municipal-card-header">
          <h5>
            <font-awesome-icon icon="list" />
            Cat�logo de Claves
            <span class="badge-info" v-if="claves.length > 0">{{ claves.length }} registros</span>
          </h5>
          <div v-if="loading" class="spinner-border spinner-border-sm" role="status">
            <span class="visually-hidden">Cargando...</span>
          </div>
        </div>
        <div class="municipal-card-body table-container">
          <div class="municipal-table">
            <table class="municipal-table">
              <thead class="municipal-table-header">
                <tr>
                  <th>Clave</th>
                  <th>Descripci�n</th>
                  <th>Acciones</th>
                </tr>
              </thead>
              <tbody>
                <tr v-for="clave in claves" :key="clave.clave_cuota" class="row-hover">
                  <td>
                    <span class="badge-primary">{{ clave.clave_cuota }}</span>
                  </td>
                  <td><strong>{{ clave.descripcion }}</strong></td>
                  <td>
                    <div class="action-buttons">
                      <button
                        class="btn-action-edit"
                        @click="openEditModal(clave)"
                        title="Editar"
                      >
                        <font-awesome-icon icon="edit" />
                      </button>
                      <button
                        class="btn-action-delete"
                        @click="confirmDelete(clave)"
                        title="Eliminar"
                      >
                        <font-awesome-icon icon="trash" />
                      </button>
                    </div>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
          <div v-if="!loading && claves.length === 0" class="text-center py-5">
            <font-awesome-icon icon="inbox" size="3x" class="text-muted mb-3" />
            <p class="text-muted">No hay claves de cuota registradas</p>
          </div>
        </div>
    </div>

    <!-- Modal para crear/editar -->
    <div v-if="showModal" class="modal-overlay" @click.self="closeModal">
      <div class="modal-container modal-sm">
        <div class="modal-header">
          <h5>{{ isEditMode ? 'Editar Clave de Cuota' : 'Agregar Clave de Cuota' }}</h5>
          <button class="btn-close" @click="closeModal">
            <font-awesome-icon icon="times" />
          </button>
        </div>
        <div class="modal-body">
          <form @submit.prevent="saveClave">
            <div class="form-group">
              <label class="municipal-form-label">Clave de Cuota *</label>
              <input
                type="number"
                class="municipal-form-control"
                v-model.number="form.clave_cuota"
                :readonly="isEditMode"
                min="1"
                max="5000"
                required
                placeholder="Ingrese la clave"
              />
            </div>
            <div class="form-group">
              <label class="municipal-form-label">Descripci�n *</label>
              <input
                type="text"
                class="municipal-form-control text-uppercase"
                v-model="form.descripcion"
                maxlength="60"
                required
                placeholder="Ingrese la descripci�n"
              />
            </div>
            <div class="modal-footer">
              <button type="submit" class="btn-municipal-primary" :disabled="saving">
                <font-awesome-icon :icon="saving ? 'spinner' : 'save'" :spin="saving" />
                {{ saving ? 'Guardando...' : 'Guardar' }}
              </button>
              <button type="button" class="btn-municipal-secondary" @click="closeModal" :disabled="saving">
                <font-awesome-icon icon="times" />
                Cancelar
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
    </div>
  </div>
</template>

<script setup>
import { FontAwesomeIcon } from '@fortawesome/vue-fontawesome'
import { ref, onMounted } from 'vue'
import { useApi } from '@/composables/useApi'
import { useLicenciasErrorHandler } from '@/composables/useLicenciasErrorHandler'
import { useToast } from 'vue-toastification'
import Swal from 'sweetalert2'

const { executeStoredProcedure } = useApi()
const { handleError } = useLicenciasErrorHandler()
const toast = useToast()

// State
const loading = ref(false)
const saving = ref(false)
const showModal = ref(false)
const isEditMode = ref(false)
const claves = ref([])

const form = ref({
  clave_cuota: '',
  descripcion: ''
})

// Methods
const loadClaves = async () => {
  try {
    loading.value = true
    const result = await executeStoredProcedure('sp_cvecuota_list', {})
    if (result.success) {
      claves.value = result.data || []
    } else {
      handleError(result)
    }
  } catch (error) {
    handleError(error)
  } finally {
    loading.value = false
  }
}

const openCreateModal = () => {
  isEditMode.value = false
  // Calcular la siguiente clave autom�ticamente
  const nextClave = claves.value.length > 0
    ? Math.max(...claves.value.map(c => c.clave_cuota)) + 1
    : 1
  form.value = {
    clave_cuota: nextClave,
    descripcion: ''
  }
  showModal.value = true
}

const openEditModal = (clave) => {
  isEditMode.value = true
  form.value = {
    clave_cuota: clave.clave_cuota,
    descripcion: clave.descripcion
  }
  showModal.value = true
}

const closeModal = () => {
  showModal.value = false
  form.value = {
    clave_cuota: '',
    descripcion: ''
  }
}

const saveClave = async () => {
  if (!form.value.descripcion || form.value.descripcion.trim() === '') {
    toast.warning('La descripci�n no puede estar vac�a')
    return
  }

  try {
    saving.value = true
    const sp = isEditMode.value ? 'sp_cvecuota_update' : 'sp_cvecuota_create'
    const params = {
      p_clave_cuota: form.value.clave_cuota,
      p_descripcion: form.value.descripcion.trim().toUpperCase()
    }

    const result = await executeStoredProcedure(sp, params)
    if (result.success) {
      toast.success(isEditMode.value ? 'Clave actualizada correctamente' : 'Clave creada correctamente')
      closeModal()
      loadClaves()
    } else {
      handleError(result)
    }
  } catch (error) {
    handleError(error)
  } finally {
    saving.value = false
  }
}

const confirmDelete = async (clave) => {
  const result = await Swal.fire({
    title: '�Est� seguro?',
    text: `�Desea eliminar la clave ${clave.clave_cuota}?`,
    icon: 'warning',
    showCancelButton: true,
    confirmButtonText: 'S�, eliminar',
    cancelButtonText: 'Cancelar',
    confirmButtonColor: '#d33',
    cancelButtonColor: '#6c757d'
  })

  if (result.isConfirmed) {
    await deleteClave(clave.clave_cuota)
  }
}

const deleteClave = async (clave_cuota) => {
  try {
    loading.value = true
    const result = await executeStoredProcedure('sp_cvecuota_delete', {
      p_clave_cuota: clave_cuota
    })
    if (result.success) {
      toast.success('Clave eliminada correctamente')
      loadClaves()
    } else {
      handleError(result)
    }
  } catch (error) {
    handleError(error)
  } finally {
    loading.value = false
  }
}

// Lifecycle
onMounted(() => {
  loadClaves()
})
</script>



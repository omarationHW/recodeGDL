<script setup>
import { FontAwesomeIcon } from '@fortawesome/vue-fontawesome'
import { ref, onMounted } from 'vue'
import { useRoute } from 'vue-router'
import { useApi } from '@/composables/useApi'
import { useLicenciasErrorHandler } from '@/composables/useLicenciasErrorHandler'
import { useToast } from 'vue-toastification'

const route = useRoute()
const { executeStoredProcedure } = useApi()
const { handleError } = useLicenciasErrorHandler()
const toast = useToast()

const convenio = ref(null)
const parciales = ref([])
const loading = ref(false)

const loadConvenio = async () => {
  const id_conv = route.params.id_conv || route.query.id_conv

  if (!id_conv) {
    toast.error('No se especific� el ID del convenio')
    return
  }

  loading.value = true
  try {
    // Cargar datos generales
    const result1 = await executeStoredProcedure('SP_MERCADOS_GET_CONVENIO_BY_ID', [id_conv])
    if (result1 && result1.length > 0) {
      convenio.value = result1[0]
    }

    // Cargar parcialidades
    const result2 = await executeStoredProcedure('SP_MERCADOS_GET_CONVENIO_PARCIALES', [id_conv])
    parciales.value = result2 || []
  } catch (error) {
    handleError(error)
    toast.error('Error al cargar convenio')
  } finally {
    loading.value = false
  }
}

const formatCurrency = (value) => {
  if (value == null) return ''
  return new Intl.NumberFormat('es-MX', {
    style: 'currency',
    currency: 'MXN'
  }).format(value)
}

const formatDate = (value) => {
  if (!value) return ''
  return new Date(value).toLocaleDateString('es-MX')
}

onMounted(() => {
  loadConvenio()
})
</script>



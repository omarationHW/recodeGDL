<template>
  <div class="module-view">
    <div class="module-view-header">
      <div class="module-view-icon">
        <font-awesome-icon icon="bolt" />
      </div>
      <div class="module-view-info">
        <h1>Modificaci�n de Energ�a</h1>
        <p>Actualizaci�n de Registros de Energ�a El�ctrica</p>
      </div>
        </div>

    <div class="module-view-content">
      <div class="municipal-card">
        <div class="municipal-card-header">
          <h5><font-awesome-icon icon="search" /> B�squeda de Local</h5>
        </div>
        <div class="municipal-card-body">
          <div class="form-row">
            <div class="form-group">
              <label class="municipal-form-label">Oficina *</label>
              <input type="number" class="municipal-form-control" v-model.number="search.oficina" />
            </div>
            <div class="form-group">
              <label class="municipal-form-label">Mercado *</label>
              <input type="number" class="municipal-form-control" v-model.number="search.num_mercado" />
            </div>
            <div class="form-group">
              <label class="municipal-form-label">Categor�a *</label>
              <input type="number" class="municipal-form-control" v-model.number="search.categoria" />
            </div>
            <div class="form-group">
              <label class="municipal-form-label">Secci�n *</label>
              <input type="text" class="municipal-form-control text-uppercase" v-model="search.seccion" maxlength="2" />
            </div>
            <div class="form-group">
              <label class="municipal-form-label">Local *</label>
              <input type="number" class="municipal-form-control" v-model.number="search.local" />
            </div>
            <div class="form-group">
              <label class="municipal-form-label">Letra Local</label>
              <input type="text" class="municipal-form-control text-uppercase" v-model="search.letra_local" maxlength="1" />
            </div>
            <div class="form-group">
              <label class="municipal-form-label">Bloque</label>
              <input type="text" class="municipal-form-control text-uppercase" v-model="search.bloque" maxlength="1" />
            </div>
        </div>
          <div class="button-group">
            <button class="btn-municipal-primary" @click="buscar" :disabled="loading">
              <font-awesome-icon :icon="loading ? 'spinner' : 'search'" :spin="loading" />
              Buscar
            </button>
          </div>
        </div>
      </div>

      <div class="municipal-card" v-if="energia">
        <div class="municipal-card-header">
          <h5><font-awesome-icon icon="edit" /> Modificar Energ�a</h5>
        </div>
        <div class="municipal-card-body">
          <form @submit.prevent="modificar">
            <div class="form-row">
              <div class="form-group">
                <label class="municipal-form-label">Movimiento *</label>
                <select class="municipal-form-control" v-model="form.movimiento" required>
                  <option value="D">D - Modificaci�n de Datos</option>
                  <option value="B">B - Baja</option>
                  <option value="F">F - Fecha de Alta</option>
                </select>
              </div>
              <div class="form-group">
                <label class="municipal-form-label">Cantidad (kWh) *</label>
                <input type="number" step="0.01" class="municipal-form-control" v-model.number="form.cantidad" required />
              </div>
              <div class="form-group">
                <label class="municipal-form-label">Clave Consumo *</label>
                <input type="text" class="municipal-form-control text-uppercase" v-model="form.cve_consumo" maxlength="5" required />
              </div>
              <div class="form-group">
                <label class="municipal-form-label">Local Adicional</label>
                <input type="text" class="municipal-form-control" v-model="form.local_adicional" maxlength="10" />
              </div>
              <div class="form-group">
                <label class="municipal-form-label">Vigencia *</label>
                <select class="municipal-form-control" v-model="form.vigencia" required>
                  <option value="A">A - Activa</option>

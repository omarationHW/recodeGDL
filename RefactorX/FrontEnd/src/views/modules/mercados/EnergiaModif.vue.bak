<script setup>
import { ref } from 'vue'
import { useApi } from '@/composables/useApi'
import { useLicenciasErrorHandler } from '@/composables/useLicenciasErrorHandler'
import { useToast } from 'vue-toastification'

const { executeStoredProcedure } = useApi()
const { handleError } = useLicenciasErrorHandler()
const toast = useToast()

const loading = ref(false)
const saving = ref(false)
const search = ref({ oficina: null, num_mercado: null, categoria: null, seccion: '', local: null, letra_local: '', bloque: '' })
const energia = ref(null)
const form = ref({ movimiento: 'D', cantidad: 0, cve_consumo: '', local_adicional: '', vigencia: 'A', fecha_alta: '', fecha_baja: '', periodo_baja_axo: null, periodo_baja_mes: null })

const buscar = async () => {
  try {
    loading.value = true
    const result = await executeStoredProcedure('sp_energia_modif_buscar', {
      p_oficina: search.value.oficina,
      p_num_mercado: search.value.num_mercado,
      p_categoria: search.value.categoria,
      p_seccion: search.value.seccion,
      p_local: search.value.local,
      p_letra_local: search.value.letra_local || null,
      p_bloque: search.value.bloque || null
    })
    if (result.success && result.data && result.data.length > 0) {
      energia.value = result.data[0]
      form.value = {
        movimiento: 'D',
        cantidad: energia.value.cantidad,
        cve_consumo: energia.value.cve_consumo,
        local_adicional: energia.value.local_adicional || '',
        vigencia: energia.value.vigencia,
        fecha_alta: energia.value.fecha_alta ? energia.value.fecha_alta.substring(0, 10) : '',
        fecha_baja: energia.value.fecha_baja ? energia.value.fecha_baja.substring(0, 10) : '',
        periodo_baja_axo: null,
        periodo_baja_mes: null
      }
      toast.success('Registro de energ�a encontrado')
    } else {
      energia.value = null
      toast.error('No se encontr� registro de energ�a para el local especificado')
    }
  } catch (error) {
    handleError(error)
  } finally {
    loading.value = false
  }
}

const modificar = async () => {
  try {
    saving.value = true
    const result = await executeStoredProcedure('sp_energia_modif_modificar', {
      p_id_energia: energia.value.id_energia,
      p_id_local: energia.value.id_local,
      p_cantidad: form.value.cantidad,
      p_vigencia: form.value.vigencia,
      p_fecha_alta: form.value.fecha_alta,
      p_fecha_baja: form.value.fecha_baja || null,
      p_movimiento: form.value.movimiento,
      p_cve_consumo: form.value.cve_consumo,
      p_local_adicional: form.value.local_adicional || null,
      p_usuario_id: 1,
      p_periodo_baja_axo: form.value.periodo_baja_axo || null,
      p_periodo_baja_mes: form.value.periodo_baja_mes || null
    })
    if (result.success && result.data && result.data.length > 0) {
      const response = result.data[0]
      if (response.success) {
        toast.success(response.message)
        resetForm()
      } else {
        toast.error(response.message)
      }
    } else {
      handleError(result)
    }
  } catch (error) {
    handleError(error)
  } finally {
    saving.value = false
  }
}

const resetForm = () => {
  energia.value = null
  form.value = { movimiento: 'D', cantidad: 0, cve_consumo: '', local_adicional: '', vigencia: 'A', fecha_alta: '', fecha_baja: '', periodo_baja_axo: null, periodo_baja_mes: null }
}
</script>



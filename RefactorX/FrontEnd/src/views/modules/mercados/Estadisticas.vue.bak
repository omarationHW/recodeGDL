<template>
    <div class="module-view">
    <div class="module-view-header">
      <div class="module-view-icon">
        <font-awesome-icon icon="cog" />
      </div>
      <div class="module-view-info">
        <h1>Estad�sticas de Adeudos</h1>
        <p>M�dulo de Mercados</p>
      </div>
        </div>

    <div class="module-view-content">

    <div class="form-row">
      <div class="form-group">
        <div class="municipal-card">
          <div class="municipal-card-header bg-primary text-white">
            <i class="fas fa-chart-bar"></i> Tipo de Estad�stica
          </div>
          <div class="municipal-card-body">
            <div class="form-check mb-2">
              <input
                class="form-check-input"
                type="radio"
                id="tipo1"
                value="global"
                v-model="tipo"
              />
              <label class="form-check-label" for="tipo1">
                Todos los Adeudos
              </label>
            </div>
            <div class="form-check mb-2">
              <input
                class="form-check-input"
                type="radio"
                id="tipo2"
                value="importe"
                v-model="tipo"
              />
              <label class="form-check-label" for="tipo2">
                Adeudos = Importe
              </label>
            </div>
            <div class="form-check">
              <input
                class="form-check-input"
                type="radio"
                id="tipo3"
                value="desglose"
                v-model="tipo"
              />
              <label class="form-check-label" for="tipo3">
                Desglose Adeudos = Importe
              </label>
            </div>
        </div>
        </div>
    </div>

      <div class="form-group">
        <div class="municipal-card">
          <div class="municipal-card-header">
            <i class="fas fa-filter"></i> Filtros
          </div>
          <div class="municipal-card-body">
            <div class="row g-3">
              <div class="form-group">
                <label class="municipal-form-label">A�o *</label>
                <input
                  type="number"
                  v-model.number="year"
                  class="municipal-form-control"
                  min="1992"
                  max="2999"
                  required
                />
              </div>
              <div class="form-group">
                <label class="municipal-form-label">Mes *</label>
                <input
                  type="number"
                  v-model.number="month"
                  class="municipal-form-control"
                  min="1"
                  max="12"
                  required
                />
              </div>
              <div class="col-md-4" v-if="tipo !== 'global'">
                <label class="municipal-form-label">Importe M�nimo *</label>
                <input
                  type="number"
                  v-model.number="importe"
                  class="municipal-form-control"
                  min="0"
                  step="0.01"
                  required
                />
              </div>
        </div>
            <div class="mt-3">
              <button class="btn-municipal-primary" @click="consultar" :disabled="loading">
                <i class="fas fa-search"></i> Consultar
              </button>
              <button
                class="btn-municipal-success ms-2"
                @click="exportarExcel"
                :disabled="!resultados.length"
              >
                <i class="fas fa-file-excel"></i> Exportar Excel
              </button>
            </div>
        </div>
      </div>
        </div>
    </div>

    <div v-if="loading" class="text-center p-4">
      <div class="spinner-border text-primary"></div>
      <p class="mt-2">Cargando estad�sticas...</p>
    </div>

    <div v-else-if="resultados.length > 0" class="municipal-card">
      <div class="municipal-card-header d-flex justify-content-between align-items-center">
        <span>
          <i class="fas fa-table"></i> Resultados
          <span class="badge badge-info ml-2">{{ resultados.length }} registros</span>
        </span>
      </div>
      <div class="municipal-card-body">
        <div class="municipal-table">
          <table class="municipal-table">
            <thead class="municipal-table-header">
              <tr>
                <th v-for="col in columnas" :key="col">{{ col }}</th>
              </tr>
            </thead>
            <tbody>
              <tr v-for="(row, idx) in resultados" :key="idx">
                <td v-for="col in columnas" :key="col">
                  {{ formatValue(row[col], col) }}
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <div v-else-if="!loading" class="alert alert-info">
      Seleccione los filtros y haga clic en Consultar para ver los resultados
    </div>
    </div>
  </div>
</template>

<script setup>
import { FontAwesomeIcon } from '@fortawesome/vue-fontawesome'
import { ref, computed } from 'vue'
import { useApi } from '@/composables/useApi'
import { useLicenciasErrorHandler } from '@/composables/useLicenciasErrorHandler'
import { useToast } from 'vue-toastification'
import * as XLSX from 'xlsx'

const { executeStoredProcedure } = useApi()
const { handleError } = useLicenciasErrorHandler()
const toast = useToast()

const today = new Date()
const tipo = ref('global')
const year = ref(today.getFullYear())
const month = ref(today.getMonth() + 1)
const importe = ref(0)
const resultados = ref([])
const loading = ref(false)

const columnas = computed(() => {
  if (resultados.value.length > 0) {
    return Object.keys(resultados.value[0])
  }
  return []
})

const consultar = async () => {
  loading.value = true
  resultados.value = []

  try {
    let spName = ''
    let params = []

    if (tipo.value === 'global') {
      spName = 'SP_MERCADOS_ESTADISTICAS_GLOBAL'
      params = [year.value, month.value]
    } else if (tipo.value === 'importe') {
      spName = 'SP_MERCADOS_ESTADISTICAS_IMPORTE'
      params = [year.value, month.value, importe.value]
    } else if (tipo.value === 'desglose') {
      spName = 'SP_MERCADOS_DESGLOSE_ADEUDOS_IMPORTE'
      params = [year.value, month.value, importe.value]
    }

    const result = await executeStoredProcedure(spName, params)
    resultados.value = result || []

    if (resultados.value.length === 0) {
      toast.info('No se encontraron resultados')
    } else {
      toast.success(`Se encontraron ${resultados.value.length} registros`)
    }
  } catch (error) {
    handleError(error)
    toast.error('Error al consultar estad�sticas')
  } finally {
    loading.value = false
  }
}

const exportarExcel = () => {
  if (resultados.value.length === 0) return

  const ws = XLSX.utils.json_to_sheet(resultados.value)
  const wb = XLSX.utils.book_new()
  XLSX.utils.book_append_sheet(wb, ws, 'Estad�sticas')

  const filename = `estadisticas_${tipo.value}_${year.value}_${month.value}.xlsx`
  XLSX.writeFile(wb, filename)

  toast.success('Excel exportado correctamente')
}

const formatValue = (value, columnName) => {
  if (value == null) return ''

  // Columnas de moneda
  const currencyColumns = [
    'importe_total',
    'recargos_total',
    'importe_adeudo',
    'recargos',
    'total'
  ]

  if (currencyColumns.some((col) => columnName.toLowerCase().includes(col.toLowerCase()))) {
    return new Intl.NumberFormat('es-MX', {
      style: 'currency',
      currency: 'MXN'
    }).format(value)
  }

  return value
}
</script>



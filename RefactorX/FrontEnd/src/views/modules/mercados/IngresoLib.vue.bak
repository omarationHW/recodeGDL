<template>
  <div class="module-view">
    <div class="module-view-header">
      <div class="module-view-icon"><font-awesome-icon icon="coins" /></div>
      <div class="module-view-info">
        <h1>Ingresos Mercado Libertad</h1>
        <p>Reporte de Ingresos por Fecha y Caja</p>
      </div>
        </div>

    <div class="module-view-content">
      <div class="municipal-card">
        <div class="municipal-card-header"><h5><font-awesome-icon icon="filter" /> Parámetros</h5></div>
        <div class="municipal-card-body">
          <div class="form-row">
            <div class="form-group">
              <label class="municipal-form-label">Mercado *</label>
              <select class="municipal-form-control" v-model.number="filters.mercado">
                <option value="">Seleccione</option>
                <option v-for="m in mercados" :key="m.num_mercado_nvo" :value="m.num_mercado_nvo">{{ m.num_mercado_nvo }} - {{ m.descripcion }}</option>
              </select>
            </div>
            <div class="form-group">
              <label class="municipal-form-label">Mes *</label>
              <select class="municipal-form-control" v-model.number="filters.mes">
                <option v-for="m in 12" :key="m" :value="m">{{ m }} - {{ getMesNombre(m) }}</option>
              </select>
            </div>
            <div class="form-group">
              <label class="municipal-form-label">Año *</label>
              <input type="number" class="municipal-form-control" v-model.number="filters.anio" min="1992" max="2999" />
            </div>
        </div>
          <div class="button-group">
            <button class="btn-municipal-primary" @click="buscar" :disabled="loading">
              <font-awesome-icon :icon="loading ? 'spinner' : 'search'" :spin="loading" />
              Consultar
            </button>
          </div>
        </div>

      <div class="row" v-if="ingresos.length > 0">
        <div class="form-group">
          <div class="municipal-card">
            <div class="municipal-card-header"><h5><font-awesome-icon icon="calendar-day" /> Ingresos por Fecha y Caja</h5></div>
            <div class="municipal-card-body table-container">
              <div class="municipal-table">
                <table class="municipal-table">
                  <thead class="municipal-table-header">
                    <tr><th>Fecha</th><th>Caja</th><th class="text-end">Pagos</th><th class="text-end">Importe</th></tr>
                  </thead>
                  <tbody>
                    <tr v-for="(ing, idx) in ingresos" :key="idx" class="row-hover">
                      <td>{{ formatDate(ing.fecha_pago) }}</td>
                      <td>{{ ing.caja_pago }}</td>
                      <td class="text-end">{{ ing.pagos }}</td>
                      <td class="text-end"><strong class="text-success">{{ formatCurrency(ing.importe) }}</strong></td>
                    </tr>
                  </tbody>
                </table>
              </div>
        </div>
    </div>
        <div class="form-group">
          <div class="municipal-card">
            <div class="municipal-card-header"><h5><font-awesome-icon icon="cash-register" /> Totales por Caja</h5></div>
            <div class="municipal-card-body">
              <div class="municipal-table">
                <table class="municipal-table">
                  <thead class="municipal-table-header">
                    <tr><th>Caja</th><th class="text-end">Pagos</th><th class="text-end">Importe</th></tr>
                  </thead>
                  <tbody>
                    <tr v-for="(caja, idx) in cajas" :key="idx" class="row-hover">
                      <td>{{ caja.caja_pago }}</td>
                      <td class="text-end">{{ caja.pagos }}</td>
                      <td class="text-end"><strong>{{ formatCurrency(caja.importe) }}</strong></td>
                    </tr>
                  </tbody>
                  <tfoot class="municipal-table">
                    <tr><th>TOTAL</th><th class="text-end">{{ totals.total_pagos }}</th><th class="text-end">{{ formatCurrency(totals.total_importe) }}</th></tr>
                  </tfoot>
                </table>
              </div>
        </div>
    </div>
        </div>
        </div>
</template>

<script setup>
import { FontAwesomeIcon } from '@fortawesome/vue-fontawesome'
import { ref, onMounted } from 'vue'
import { useApi } from '@/composables/useApi'
import { useLicenciasErrorHandler } from '@/composables/useLicenciasErrorHandler'
import { useToast } from 'vue-toastification'

const { executeStoredProcedure } = useApi()
const { handleError } = useLicenciasErrorHandler()
const toast = useToast()

const loading = ref(false)
const mercados = ref([])
const ingresos = ref([])
const cajas = ref([])
const totals = ref({ total_pagos: 0, total_importe: 0 })
const filters = ref({ mercado: '', mes: new Date().getMonth() + 1, anio: new Date().getFullYear() })

const formatCurrency = (value) => new Intl.NumberFormat('es-MX', { style: 'currency', currency: 'MXN' }).format(value || 0)
const formatDate = (date) => date ? new Date(date).toLocaleDateString('es-MX') : 'N/A'
const getMesNombre = (m) => ['Enero', 'Febrero', 'Marzo', 'Abril', 'Mayo', 'Junio', 'Julio', 'Agosto', 'Septiembre', 'Octubre', 'Noviembre', 'Diciembre'][m - 1]

const loadMercados = async () => {
  const result = await executeStoredProcedure('sp_get_mercados', {})
  if (result.success) mercados.value = result.data || []
}

const buscar = async () => {
  try {
    loading.value = true
    const [ingResult, cajasResult, totalsResult] = await Promise.all([
      executeStoredProcedure('sp_get_ingresos_libertad', { p_mes: filters.value.mes, p_anio: filters.value.anio, p_mercado: filters.value.mercado }),
      executeStoredProcedure('sp_get_cajas_libertad', { p_mes: filters.value.mes, p_anio: filters.value.anio, p_mercado: filters.value.mercado }),
      executeStoredProcedure('sp_get_totals_libertad', { p_mes: filters.value.mes, p_anio: filters.value.anio, p_mercado: filters.value.mercado })
    ])
    if (ingResult.success) ingresos.value = ingResult.data || []
    if (cajasResult.success) cajas.value = cajasResult.data || []
    if (totalsResult.success && totalsResult.data?.[0]) totals.value = totalsResult.data[0]
    toast.success(`Reporte generado: ${ingresos.value.length} ingresos`)
  } catch (error) {
    handleError(error)
  } finally {
    loading.value = false
  }
}

onMounted(() => loadMercados())
</script>



<template>
  <div class="module-view">
    <div class="module-view-header">
      <div class="module-view-icon">
        <font-awesome-icon icon="table" />
      </div>
      <div class="module-view-info">
        <h1>Padr�n Global de Locales</h1>
        <p>Consulta General del Padr�n de Mercados</p>
      </div>
    </div>

    <div class="module-view-content">
      <div class="municipal-card">
        <div class="municipal-card-header">
          <h5><font-awesome-icon icon="filter" /> Filtros de Consulta</h5>
        </div>
        <div class="municipal-card-body">
          <div class="form-row">
            <div class="form-group">
              <label class="municipal-form-label">A�o</label>
              <input
                type="number"
                v-model.number="filters.axo"
                class="municipal-form-control"
                min="1995"
                max="3000"
              />
            </div>
            <div class="form-group">
              <label class="municipal-form-label">Mes</label>
              <input
                type="number"
                v-model.number="filters.mes"
                class="municipal-form-control"
                min="1"
                max="12"
              />
            </div>
            <div class="form-group">
              <label class="municipal-form-label">Estado del Local</label>
              <select v-model="filters.vig" class="municipal-form-control">
                <option value="A">VIGENTES</option>
                <option value="B">CON BAJA TOTAL</option>
                <option value="C">CON BAJA POR ACUERDO</option>
                <option value="D">CON BAJA ADMINISTRATIVA</option>
              </select>
            </div>
        </div>
          <div class="button-group">
            <button class="btn-municipal-primary" @click="fetchPadron">
              <font-awesome-icon icon="search" /> Consultar
            </button>
            <button class="btn-municipal-success" @click="exportExcel" :disabled="padron.length === 0">
              <font-awesome-icon icon="file-excel" /> Exportar Excel
            </button>
          </div>
        </div>
      </div>

      <div class="municipal-card">
        <div class="municipal-card-header">
          <h5>
            <font-awesome-icon icon="list" /> Padr�n Global de Locales
            <span class="badge-info">{{ padron.length }} registros</span>
          </h5>
        </div>
        <div class="municipal-card-body">
          <div v-if="loading" class="text-center">
            <div class="spinner-border text-primary"></div>
            <p class="mt-2">Cargando datos...</p>
          </div>
          <div v-else class="municipal-table">
            <table class="municipal-table">
              <thead class="municipal-table-header">
                <tr>
                  <th>Rec.</th>
                  <th>Merc.</th>
                  <th>Nombre Mercado</th>
                  <th>Cat.</th>
                  <th>Secc.</th>
                  <th>Local</th>
                  <th>Let</th>
                  <th>Blq</th>
                  <th>Nombre</th>
                  <th>Adicionales</th>
                  <th class="text-end">Superficie</th>
                  <th class="text-end">Renta</th>
                  <th>Estado</th>
                  <th>Leyenda</th>
                </tr>
              </thead>
              <tbody>
                <tr v-for="row in padron" :key="row.id_local" class="row-hover">
                  <td>{{ row.oficina }}</td>
                  <td>{{ row.num_mercado }}</td>
                  <td>{{ row.descripcion }}</td>
                  <td>{{ row.categoria }}</td>
                  <td>{{ row.seccion }}</td>
                  <td>{{ row.local }}</td>
                  <td>{{ row.letra_local }}</td>
                  <td>{{ row.bloque }}</td>
                  <td>{{ row.nombre }}</td>
                  <td>{{ row.descripcion_local }}</td>
                  <td class="text-end">{{ formatDecimal(row.superficie) }} m�</td>
                  <td class="text-end">{{ formatCurrency(row.renta) }}</td>
                  <td>
                    <span :class="getEstadoClass(row.vigencia)">
                      {{ estadoLabel(row.vigencia) }}
                    </span>
                  </td>
                  <td>{{ row.leyenda }}</td>
                </tr>
                <tr v-if="padron.length === 0">
                  <td colspan="14" class="text-center text-muted">
                    No hay datos para los filtros seleccionados.
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</template>

<script setup>
import { ref, onMounted } from 'vue'
import { useApi } from '@/composables/useApi'
import { useLicenciasErrorHandler } from '@/composables/useLicenciasErrorHandler'
import { useToast } from 'vue-toastification'
import * as XLSX from 'xlsx'

const { executeStoredProcedure } = useApi()
const { handleError } = useLicenciasErrorHandler()
const toast = useToast()

const now = new Date()
const filters = ref({
  axo: now.getFullYear(),
  mes: now.getMonth() + 1,
  vig: 'A'
})

const padron = ref([])
const loading = ref(false)

const fetchPadron = async () => {
  loading.value = true
  try {
    const result = await executeStoredProcedure(
      'SP_MERCADOS_PADRON_GLOBAL',
      [filters.value.axo, filters.value.mes, filters.value.vig]
    )
    padron.value = result || []
  } catch (error) {
    handleError(error)
    toast.error('Error al consultar el padr�n global')
  } finally {
    loading.value = false
  }
}

const exportExcel = () => {
  if (padron.value.length === 0) {
    toast.warning('No hay datos para exportar')
    return
  }

  const data = padron.value.map(row => ({
    'Recaudadora': row.oficina,
    'Mercado': row.num_mercado,
    'Nombre Mercado': row.descripcion,
    'Categor�a': row.categoria,
    'Secci�n': row.seccion,
    'Local': row.local,
    'Letra': row.letra_local,
    'Bloque': row.bloque,
    'Nombre': row.nombre,
    'Adicionales': row.descripcion_local,
    'Superficie': row.superficie,
    'Renta': row.renta,
    'Estado': estadoLabel(row.vigencia),
    'Leyenda': row.leyenda
  }))

  const ws = XLSX.utils.json_to_sheet(data)
  const wb = XLSX.utils.book_new()
  XLSX.utils.book_append_sheet(wb, ws, 'Padr�n Global')

  const fileName = `Padron_Global_${filters.value.axo}_${filters.value.mes}_${filters.value.vig}.xlsx`
  XLSX.writeFile(wb, fileName)

  toast.success('Archivo Excel generado correctamente')
}

const estadoLabel = (vig) => {
  const estados = {
    'A': 'VIGENTE',
    'V': 'VIGENTE',
    'B': 'BAJA TOTAL',
    'C': 'BAJA POR ACUERDO',
    'D': 'BAJA ADMINISTRATIVA'
  }
  return estados[vig] || vig
}

const getEstadoClass = (vig) => {
  const classes = {
    'A': 'badge-success',
    'V': 'badge-success',
    'B': 'badge-danger',
    'C': 'badge-warning',
    'D': 'badge-secondary'
  }
  return classes[vig] || 'badge-secondary'
}

const formatCurrency = (value) => {
  if (value == null) return ''
  return new Intl.NumberFormat('es-MX', {
    style: 'currency',
    currency: 'MXN'
  }).format(value)
}

const formatDecimal = (value) => {
  if (value == null) return ''
  return new Intl.NumberFormat('es-MX', {
    minimumFractionDigits: 2,
    maximumFractionDigits: 2
  }).format(value)
}

onMounted(() => {
  fetchPadron()
})
</script>



<template>
  <div class="module-view">
    <div class="module-view-header">
      <div class="module-view-icon"><font-awesome-icon icon="bolt" /></div>
      <div class="module-view-info"><h1>Paso de Energía</h1><p>Importación de Pagos de Energía Eléctrica</p></div>
        </div>

    <div class="module-view-content">
      <div class="municipal-card">
        <div class="municipal-card-header"><h5><font-awesome-icon icon="file-import" /> Importar Archivo CSV</h5></div>
        <div class="municipal-card-body">
          <div class="form-group"><label class="municipal-form-label">Seleccione archivo CSV</label><input type="file" accept=".csv,.txt" class="municipal-form-control" @change="handleFile" /></div>
          <div class="button-group">
            <button class="btn-municipal-primary" @click="procesar" :disabled="loading || registros.length === 0"><font-awesome-icon :icon="loading ? 'spinner' : 'upload'" :spin="loading" /> Procesar Registros</button>
          </div>
        </div>

      <div class="municipal-card" v-if="registros.length > 0">
        <div class="municipal-card-header"><h5><font-awesome-icon icon="list" /> Registros a Importar <span class="badge-info">{{ registros.length }}</span></h5></div>
        <div class="municipal-card-body table-container">
          <div class="municipal-table">
            <table class="municipal-table">
              <thead class="municipal-table-header">
                <tr><th>ID Energía</th><th>Año</th><th>Periodo</th><th>Fecha Pago</th><th>Oficina</th><th>Caja</th><th>Oper.</th><th class="text-end">Importe</th><th class="text-end">Cantidad</th></tr>
              </thead>
              <tbody>
                <tr v-for="(reg, idx) in registros" :key="idx" class="row-hover">
                  <td>{{ reg.id_energia }}</td>
                  <td>{{ reg.axo }}</td>
                  <td>{{ reg.periodo }}</td>
                  <td>{{ reg.fecha_pago }}</td>
                  <td>{{ reg.oficina_pago }}</td>
                  <td>{{ reg.caja_pago }}</td>
                  <td>{{ reg.operacion_pago }}</td>
                  <td class="text-end">{{ formatCurrency(reg.importe_pago) }}</td>
                  <td class="text-end">{{ reg.cantidad }}</td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
    </div>
        </div>
</template>

<script setup>
import { FontAwesomeIcon } from '@fortawesome/vue-fontawesome'
import { ref } from 'vue'
import { useApi } from '@/composables/useApi'
import { useLicenciasErrorHandler } from '@/composables/useLicenciasErrorHandler'
import { useToast } from 'vue-toastification'

const { executeStoredProcedure } = useApi()
const { handleError } = useLicenciasErrorHandler()
const toast = useToast()

const loading = ref(false)
const registros = ref([])

const formatCurrency = (value) => new Intl.NumberFormat('es-MX', { style: 'currency', currency: 'MXN' }).format(value || 0)

const handleFile = (event) => {
  const file = event.target.files[0]
  if (!file) return
  const reader = new FileReader()
  reader.onload = (e) => {
    const text = e.target.result
    const lines = text.split('\n')
    registros.value = lines.slice(1).filter(l => l.trim()).map(line => {
      const cols = line.split(',')
      return {
        id_energia: parseInt(cols[0]),
        axo: parseInt(cols[1]),
        periodo: parseInt(cols[2]),
        fecha_pago: cols[3],
        oficina_pago: parseInt(cols[4]),
        caja_pago: cols[5],
        operacion_pago: parseInt(cols[6]),
        importe_pago: parseFloat(cols[7]),
        consumo: cols[8],
        cantidad: parseFloat(cols[9]),
        folio: cols[10],
        fecha_actualizacion: cols[11]
      }
    })
    toast.success(`${registros.value.length} registros cargados`)
  }
  reader.readAsText(file)
}

const procesar = async () => {
  try {
    loading.value = true
    let procesados = 0
    for (const reg of registros.value) {
      await executeStoredProcedure('sp_pasoene_insert_pagoenergia', {
        p_id_energia: reg.id_energia,
        p_axo: reg.axo,
        p_periodo: reg.periodo,
        p_fecha_pago: reg.fecha_pago,
        p_oficina_pago: reg.oficina_pago,
        p_caja_pago: reg.caja_pago,
        p_operacion_pago: reg.operacion_pago,
        p_importe_pago: reg.importe_pago,
        p_consumo: reg.consumo,
        p_cantidad: reg.cantidad,
        p_folio: reg.folio,
        p_fecha_actualizacion: reg.fecha_actualizacion,
        p_id_usuario: 1
      })
      procesados++
    }
    toast.success(`${procesados} pagos de energía importados correctamente`)
    registros.value = []
  } catch (error) {
    handleError(error)
  } finally {
    loading.value = false
  }
}
</script>


<template>
  <div class="module-view">
    <div class="module-view-header">
      <div class="module-view-icon"><font-awesome-icon icon="file-alt" /></div>
      <div class="module-view-info">
        <h1>Resumen de Pagos</h1>
        <p>Resumen Mensual de Ingresos por Mercado</p>
      </div>
              </div>

    <div class="module-view-content">
      <div class="municipal-card">
        <div class="municipal-card-header"><h5><font-awesome-icon icon="filter" /> Parámetros del Reporte</h5></div>
        <div class="municipal-card-body">
          <div class="form-row">
            <div class="form-group">
              <label class="municipal-form-label">Oficina *</label>
              <input type="number" class="municipal-form-control" v-model.number="filters.oficina" required min="1" />
            </div>
            <div class="form-group">
              <label class="municipal-form-label">Año *</label>
              <input type="number" class="municipal-form-control" v-model.number="filters.ano" required min="1992" max="2999" />
            </div>
            <div class="form-group">
              <label class="municipal-form-label">Mes *</label>
              <select class="municipal-form-control" v-model.number="filters.mes" required>
                <option v-for="m in 12" :key="m" :value="m">{{ getMesNombre(m) }}</option>
              </select>
            </div>
              </div>
          <div class="button-group">
            <button class="btn-municipal-primary" @click="generar" :disabled="loading">
              <font-awesome-icon :icon="loading ? 'spinner' : 'file-alt'" :spin="loading" /> Generar Resumen
            </button>
            <button class="btn-municipal-success" @click="exportar" :disabled="resumen.length === 0">
              <font-awesome-icon icon="file-excel" /> Exportar
            </button>
          </div>
              </div>

      <div class="municipal-card" v-if="resumen.length > 0">
        <div class="municipal-card-header">
          <h5>
            <font-awesome-icon icon="chart-pie" /> Resumen {{ getMesNombreCompleto(filters.mes) }} {{ filters.ano }}
            <span class="badge-info">{{ resumen.length }} mercados</span>
          </h5>
              </div>
        <div class="municipal-card-body">
          <div class="stats-grid" style="margin-bottom: 20px;">
            <div class="stat-card gradient-success">
              <div class="stat-icon"><font-awesome-icon icon="dollar-sign" /></div>
              <div class="stat-info">
                <div class="stat-value">{{ formatCurrency(totales.total_pagado) }}</div>
                <div class="stat-label">Total Ingresado</div>
              </div>
            </div>
            <div class="stat-card gradient-danger">
              <div class="stat-icon"><font-awesome-icon icon="exclamation-triangle" /></div>
              <div class="stat-info">
                <div class="stat-value">{{ formatCurrency(totales.total_adeudo) }}</div>
                <div class="stat-label">Total Adeudado</div>
              </div>
            </div>
            <div class="stat-card gradient-warning">
              <div class="stat-icon"><font-awesome-icon icon="building" /></div>
              <div class="stat-info">
                <div class="stat-value">{{ totales.total_locales }}</div>
                <div class="stat-label">Locales Totales</div>
              </div>
            </div>
            <div class="stat-card gradient-primary">
              <div class="stat-icon"><font-awesome-icon icon="store" /></div>
              <div class="stat-info">
                <div class="stat-value">{{ resumen.length }}</div>
                <div class="stat-label">Mercados</div>
              </div>
              </div>

          <div class="municipal-table">
            <table class="municipal-table">
              <thead class="municipal-table-header">
                <tr>
                  <th>Mercado</th>
                  <th>Descripción</th>
                  <th class="text-end">Locales</th>
                  <th class="text-end">Pagaron</th>
                  <th class="text-end">Adeudos</th>
                  <th class="text-end">Total Pagado</th>
                  <th class="text-end">Total Adeudo</th>
                  <th class="text-end">% Cobranza</th>
                </tr>
              </thead>
              <tbody>
                <tr v-for="item in resumen" :key="item.num_mercado" class="row-hover">
                  <td><strong>{{ item.num_mercado }}</strong></td>
                  <td>{{ item.descripcion }}</td>
                  <td class="text-end">{{ item.total_locales }}</td>
                  <td class="text-end"><span class="badge-success">{{ item.locales_pagaron }}</span></td>
                  <td class="text-end"><span class="badge-danger">{{ item.locales_adeudo }}</span></td>
                  <td class="text-end"><strong class="text-success">{{ formatCurrency(item.total_pagado) }}</strong></td>
                  <td class="text-end"><strong class="text-danger">{{ formatCurrency(item.total_adeudo) }}</strong></td>
                  <td class="text-end">
                    <span :class="getCobranzaBadge(item.porcentaje_cobranza)">{{ item.porcentaje_cobranza.toFixed(1) }}%</span>
                  </td>
                </tr>
              </tbody>
              <tfoot class="municipal-table-footer">
                <tr>
                  <td colspan="2"><strong>TOTALES</strong></td>
                  <td class="text-end"><strong>{{ totales.total_locales }}</strong></td>
                  <td class="text-end"><strong>{{ totales.locales_pagaron }}</strong></td>
                  <td class="text-end"><strong>{{ totales.locales_adeudo }}</strong></td>
                  <td class="text-end"><strong>{{ formatCurrency(totales.total_pagado) }}</strong></td>
                  <td class="text-end"><strong>{{ formatCurrency(totales.total_adeudo) }}</strong></td>
                  <td class="text-end"><strong>{{ totales.porcentaje_cobranza.toFixed(1) }}%</strong></td>
                </tr>
              </tfoot>
            </table>
          </div>
              </div>

      <div class="municipal-card" v-if="!loading && resumen.length === 0 && searched">
        <div class="municipal-card-body">
          <div class="empty-message">
            <font-awesome-icon icon="info-circle" size="3x" />
            <p>No se encontraron datos para el periodo especificado</p>
          </div>
              </div>
              </div>
</template>

<script setup>
import { ref, computed } from 'vue'
import { useApi } from '@/composables/useApi'
import { useLicenciasErrorHandler } from '@/composables/useLicenciasErrorHandler'
import { useToast } from 'vue-toastification'

const { executeStoredProcedure } = useApi()
const { handleError } = useLicenciasErrorHandler()
const toast = useToast()

const loading = ref(false)
const searched = ref(false)
const resumen = ref([])
const filters = ref({
  oficina: 1,
  ano: new Date().getFullYear(),
  mes: new Date().getMonth() + 1
})

const totales = computed(() => {
  const total_locales = resumen.value.reduce((sum, r) => sum + (parseInt(r.total_locales) || 0), 0)
  const locales_pagaron = resumen.value.reduce((sum, r) => sum + (parseInt(r.locales_pagaron) || 0), 0)
  const locales_adeudo = resumen.value.reduce((sum, r) => sum + (parseInt(r.locales_adeudo) || 0), 0)
  const total_pagado = resumen.value.reduce((sum, r) => sum + (parseFloat(r.total_pagado) || 0), 0)
  const total_adeudo = resumen.value.reduce((sum, r) => sum + (parseFloat(r.total_adeudo) || 0), 0)
  const porcentaje_cobranza = total_locales > 0 ? (locales_pagaron / total_locales) * 100 : 0

  return {
    total_locales,
    locales_pagaron,
    locales_adeudo,
    total_pagado,
    total_adeudo,
    porcentaje_cobranza
  }
})

const getMesNombre = (m) => {
  const meses = ['Enero', 'Febrero', 'Marzo', 'Abril', 'Mayo', 'Junio', 'Julio', 'Agosto', 'Septiembre', 'Octubre', 'Noviembre', 'Diciembre']
  return meses[m - 1] || m
}

const getMesNombreCompleto = (m) => {
  const meses = ['ENERO', 'FEBRERO', 'MARZO', 'ABRIL', 'MAYO', 'JUNIO', 'JULIO', 'AGOSTO', 'SEPTIEMBRE', 'OCTUBRE', 'NOVIEMBRE', 'DICIEMBRE']
  return meses[m - 1] || m
}

const formatCurrency = (value) => new Intl.NumberFormat('es-MX', { style: 'currency', currency: 'MXN' }).format(value || 0)

const getCobranzaBadge = (porcentaje) => {
  if (porcentaje >= 80) return 'badge-success'
  if (porcentaje >= 60) return 'badge-warning'
  return 'badge-danger'
}

const generar = async () => {
  try {
    loading.value = true
    searched.value = true

    const result = await executeStoredProcedure('sp_rpt_resumen_pagos', {
      p_oficina: filters.value.oficina,
      p_anio: filters.value.ano,
      p_mes: filters.value.mes
    })

    if (result.success) {
      resumen.value = result.data || []
      if (resumen.value.length > 0) {
        toast.success(`Resumen generado: ${resumen.value.length} mercados`)
      } else {
        toast.info('No se encontraron datos')
      }
    } else {
      handleError(result)
    }
  } catch (error) {
    handleError(error)
  } finally {
    loading.value = false
  }
}

const exportar = () => {
  const headers = ['Mercado', 'Descripción', 'Locales', 'Pagaron', 'Adeudos', 'Total Pagado', 'Total Adeudo', '% Cobranza']
  const rows = resumen.value.map(r => [
    r.num_mercado,
    r.descripcion,
    r.total_locales,
    r.locales_pagaron,
    r.locales_adeudo,
    r.total_pagado,
    r.total_adeudo,
    r.porcentaje_cobranza.toFixed(1) + '%'
  ])

  let csvContent = headers.join(',') + '\n'
  rows.forEach(row => {
    csvContent += row.map(cell => `\"${cell}\"`).join(',') + '\n'
  })

  const blob = new Blob([csvContent], { type: 'text/csv;charset=utf-8;' })
  const link = document.createElement('a')
  link.href = URL.createObjectURL(blob)
  link.download = `resumen_pagos_${filters.value.ano}_${filters.value.mes}.csv`
  link.click()
  toast.success('Archivo exportado correctamente')
}
</script>


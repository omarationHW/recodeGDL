// Estado
const cargando = ref(false)
const guardando = ref(false)
const mostrarFormulario = ref(false)
const modoEdicion = ref(false)
const zonas = ref([])

// Formulario
const formulario = ref({
  id_zona: '',
  descripcion: '',
  area_geografica: '',
  vigencia: 'V'
})

// Computed
const zonasVigentes = computed(() => {
  return zonas.value.filter(z => z.vigencia === 'V').length
})

const totalMercados = computed(() => {
  return zonas.value.reduce((sum, z) => sum + (z.total_mercados || 0), 0)
})

// Cargar datos al montar
onMounted(() => {
  cargarDatos()
})

// Cargar zonas
async function cargarDatos() {
  try {
    cargando.value = true
    const response = await execute('SP_MERCADOS_ZONAS_LIST', 'mercados', {})
    zonas.value = response || []
  } catch (error) {
    handleError(error)
  } finally {
    cargando.value = false
  }
}

// Nueva zona
function nuevaZona() {
  modoEdicion.value = false
  formulario.value = {
    id_zona: '',
    descripcion: '',
    area_geografica: '',
    vigencia: 'V'
  }
  mostrarFormulario.value = true
}

// Editar zona
function editarZona(zona) {
  modoEdicion.value = true
  formulario.value = {
    id_zona: zona.id_zona,
    descripcion: zona.descripcion,
    area_geografica: zona.area_geografica,
    vigencia: zona.vigencia
  }
  mostrarFormulario.value = true
}

// Guardar zona
async function guardarZona() {
  try {
    guardando.value = true

    if (modoEdicion.value) {
      await execute('SP_MERCADOS_ZONAS_UPDATE', 'mercados', {
        p_id_zona: formulario.value.id_zona,
        p_descripcion: formulario.value.descripcion,
        p_area_geografica: formulario.value.area_geografica || null,
        p_vigencia: formulario.value.vigencia
      })
      showToast('Zona actualizada correctamente', 'success')
    } else {
      await execute('SP_MERCADOS_ZONAS_CREATE', 'mercados', {
        p_id_zona: formulario.value.id_zona,
        p_descripcion: formulario.value.descripcion,
        p_area_geografica: formulario.value.area_geografica || null,
        p_vigencia: formulario.value.vigencia
      })
      showToast('Zona creada correctamente', 'success')
    }

    cerrarFormulario()
    await cargarDatos()

  } catch (error) {
    handleError(error)
  } finally {
    guardando.value = false
  }
}

// Eliminar zona
